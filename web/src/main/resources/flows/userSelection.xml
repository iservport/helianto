<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
              http://www.springframework.org/schema/webflow
              http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-state idref="switchSelection"/>

	<action-state id="switchSelection">
		<action bean="userSelectionAction"/>
		<transition on="doNothing" to="endUserSelection"/>
		<transition on="yes" to="endUserSelection"/>
		<transition on="no" to="selectUser"/>
	</action-state>

	<action-state id="selectUser">
		<action bean="userSelectionAction"/>
		<transition on="success" to="endUserSelection"/>
	</action-state>

	<end-state id="endUserSelection" />

</flow>
