<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
              http://www.springframework.org/schema/webflow
              http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-state idref="authorize" />

	<action-state id="authorize">
		<bean-action bean="securityMgr" method="findSecureUser">
			<method-result name="secure" scope="flow"/>
		</bean-action>
		<transition on="success" to="success" />
	</action-state>

	<!-- 
		! End subflow
		!-->

	<end-state id="success">
		<output-mapper>
			<output-attribute name="secure" scope="flow"/>
		</output-mapper>
	</end-state>

	<end-state id="error" view="abort" />

	<global-transitions>
		<transition on="error" to="error" />
	</global-transitions>

</flow>