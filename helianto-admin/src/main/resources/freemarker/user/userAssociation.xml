<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:ns0="http://www.w3.org/2001/XMLSchema-instance" ns0:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd" start-state="isNew">

   <input name="entity" value="flowScope.entity" required="true"/>
   <input name="userAssociation" value="flowScope.userAssociation" required="true"/>

   <on-start>
      <set name="flowScope.assign" value="'user/assign'"/>
   </on-start>

   <decision-state id="isNew">
      <if test="flowScope.userAssociation.keyEmpty" then="userAssociationEdit.view" else="userAssociationBrowse.view"/>
   </decision-state>

	<!-- 
	 ! userAssociation  
	 ! BROWSE VIEW
	 !-->
   <view-state id="userAssociationBrowse.view" view="/frame">
		<!-- 
		 ! before browse
		 -->
      <on-render>
         <evaluate expression="userAssociationAction.prepareTarget"/>
         <evaluate expression="userAssociationAction.resolveAuthorization"/>
         <set name="flashScope.forward" value="'toSelection'"/>
         <set name="flashScope.sidenav" value="'user/user_nav'"/>
         <set name="flashScope.sidebar" value="'user/user_bar'"/>
         <set name="flashScope.mainnav" value="'main_nav'"/>
         <set name="flashScope.template" value="'user/userAssociation'"/>
      </on-render>
		<!-- 
		 ! local transitions
		 -->
      <transition on="editTarget" to="userAssociationEdit.view"/>
      <transition on="editIdentity" to="identityEdit.view"/>
		<!-- 
		 ! backward transitions
		 -->
      <transition on="toSelection" to="toSelection"/>
   </view-state>

	<!-- 
	 ! userAssociation  
	 ! EDIT VIEW
	 !-->
   <view-state id="userAssociationEdit.view" view="/frame">
		<!-- 
		 ! before browse
		 -->
      <on-render>
         <evaluate expression="userAssociationAction.editTarget"/>
         <set name="flashScope.sidenav" value="'user/edit_nav'"/>
         <set name="flashScope.sidebar" value="'user/user_bar'"/>
         <set name="flashScope.template" value="'user/userAssociation_form'"/>
      </on-render>
		<!-- 
		 ! local transitions
		 -->
      <transition on="storeTarget" to="userAssociationBrowse.view">
         <evaluate expression="userAssociationAction.bind"/>
         <evaluate expression="userAssociationAction.storeTarget"/>
      </transition>
      <transition on="cancelForm" to="userAssociationBrowse.view"/>
   </view-state>

	<!-- 
	 ! identity  
	 ! EDIT VIEW
	 !-->
   <view-state id="identityEdit.view" view="/frame">
		<!-- 
		 ! before browse
		 -->
      <on-render>
         <evaluate expression="userAssociationAction.editTarget"/>
         <set name="flashScope.sidenav" value="'user/edit_nav'"/>
         <set name="flashScope.sidebar" value="'user/identity_bar'"/>
         <set name="flashScope.template" value="'user/identity_form'"/>
      </on-render>
		<!-- 
		 ! local transitions
		 -->
      <transition on="storeTarget" to="userAssociationBrowse.view">
         <evaluate expression="userAssociationAction.bind"/>
         <evaluate expression="userAssociationAction.storeTarget"/>
      </transition>
      <transition on="cancelForm" to="userAssociationBrowse.view"/>
   </view-state>

	<!-- 
	 ! userRole  
	 ! EDIT VIEW
	 !-->
   <view-state id="userRoleEdit.view" view="/frame">
		<!-- 
		 ! before browse
		 -->
      <on-render>
         <evaluate expression="userRoleAction.editTarget"/>
         <set name="flashScope.sidenav" value="'user/edit_nav'"/>
         <set name="flashScope.sidebar" value="'user/identity_bar'"/>
         <set name="flashScope.template" value="'user/userRole_form'"/>
      </on-render>
		<!-- 
		 ! local transitions
		 -->
      <transition on="storeTarget" to="storeUserRole">
         <evaluate expression="userRoleAction.bind"/>
      </transition>
   </view-state>

   <action-state id="storeUserRole">
      <evaluate expression="userRoleAction.storeTarget"/>
      <transition on="success" to="userBrowse.view"/>
      <transition on="error" to="userRoleEdit.view"/>
   </action-state>

	<!--
	 ! End states 
	// -->
   <end-state id="backToHome"/>
   <end-state id="backToParent"/>
   <end-state id="toSelection">
      <output name="userGroup" value="flowScope.userAssociation.parent"/>
   </end-state>

</flow>
