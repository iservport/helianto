		<input name="userAssociation" value="userAssociationFilter.item"/>
		<input name="userGroup"       value="userAssociationFilter.item"/>
		<transition on="toSelection" to="filter" />
	</subflow-state>

	<subflow-state id="userAssociation.subflow" subflow="_userAssociation">
		<input name="userAssociation" value="userAssociationFilter.item"/>
		<input name="userGroup"       value="userAssociationFilter.item"/>
		<transition on="toSelection" to="filter" />
	</subflow-state>

	<view-state id="edit.view" view="/frame2" model="userAssociation" >
	
		<on-render>
			<set name="viewScope.sidebar"  value="'user2_bar'" />
