<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        parent="_menu">

	<secured attributes="ROLE_USER_ALL, ROLE_ADMIN_MANAGER" />
	
	<persistence-context />

	<on-start>
		<set name="flowScope.basePath" value="'user/'" />
		<set name="flowScope.assign"   value="'assign'" />
		<evaluate expression="userModelAction.createModel(flowScope, currentUser.principal)" />
	</on-start>

	<action-state id="userGroup.filter">
		<evaluate expression="userGroupAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="filter" />
	</action-state>

	<action-state id="filter">
		<evaluate expression="userAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="selection.view" />
	</action-state>
	
	<!--  view section -->

	<view-state id="selection.view" view="/frame2"  model="userModel" >

		<transition on="selectUserGroup"
		            to="filter" >
				<set name="flowScope.userGroup"  value="userModel.pages['userGroup'].item"/>
			</transition>
		
		<transition on="selectUser" 
		            to="selection.view" >
				<set name="flowScope.user"  value="userModel.pages['user'].item"/>
			</transition>
		
		<transition on="createUser"
		            to="user.subflow" >
				<evaluate expression="entityAction.create(flowScope, currentUser.principal)" />
			</transition>
		
		<transition on="toSelection"        to="toCommit"/>
		
	</view-state>

