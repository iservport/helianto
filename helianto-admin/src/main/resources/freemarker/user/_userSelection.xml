			<set name="viewScope.user"     value="userAssociation.child" />
			<set name="viewScope.sidebar"  value="'user2_bar'" />
			<set name="viewScope.template" value="'user2'" />
		</on-render>

		<transition on="editUserAssociation"   to="edit.view" />
