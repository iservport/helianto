<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
        
   <secured attributes="ROLE_ADMIN_MANAGER" />
   
   <input name="userGroup"/>

   <on-start>
      <set name="flowScope.basePath" value="'entity/'"/>
      <set name="flowScope.assign"   value="'assign'"/>
   </on-start>

	<action-state id="createIfNeeded">
		<evaluate expression="homeAction.create(flowScope, currentUser.principal)" />
        <transition on="edit" to="entityEdit.view"/>
        <transition to="load"/>
	</action-state>

	<action-state id="load">
		<evaluate expression="homeAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="entityBrowse.view" />
	</action-state>

   <view-state id="entityBrowse.view" view="/frame2">

      <on-render>
         <set name="viewScope.sidebar"  value="'entity_bar'"/>
         <set name="viewScope.template" value="'entity'"/>
      </on-render>

      <transition on="toUser" to="user.subflow"/>

      <transition on="editTarget" to="entityEdit.view"/>
      <transition on="createUserGroup" to="userGroup.subflow">
         <evaluate expression="userGroupAction.createTarget"/>
      </transition>
      <transition on="selectUserGroup" to="userGroup.subflow">
         <evaluate expression="userGroupAction.selectTarget"/>
      </transition>
      <transition on="selectUser" to="userBrowse.view">
         <evaluate expression="userGroupAction.selectTarget"/>
      </transition>

      <transition on="toSelection" to="toSelection"/>
   </view-state>

	<!-- 003
	 ! entity  
	 ! EDIT VIEW
	 !-->
   <view-state id="entityEdit.view" view="/frame2" model="userGroup" >
		<!-- 
		 ! before browse
		 -->
      <on-render>
         <set name="viewScope.sidebar"  value="'entity_bar'"/>
         <set name="viewScope.template" value="'entity_form'"/>
      </on-render>
		<!-- 
		 ! local transitions
		 -->
      <transition on="storeTarget" to="entityBrowse.view">
         <evaluate expression="entityAction.bindAndValidate"/>
         <evaluate expression="entityAction.storeTarget"/>
      </transition>
      <transition on="cancelForm" to="entityBrowse.view"/>
   </view-state>

	<!-- 
	 ! province
	 ! SUBFLOW
	 !-->
   <subflow-state id="province.subflow" subflow="province">
      <input name="operator" value="flowScope.operator"/>
      <transition on="toParent" to="selection.view"/>
   </subflow-state>

	<!-- 
	 ! keyType
	 ! SUBFLOW
	 !-->
   <subflow-state id="keyType.subflow" subflow="keyType">
      <input name="operator" value="flowScope.operator"/>
      <transition on="toParent" to="selection.view"/>
   </subflow-state>

	<!-- 
	 ! service
	 ! SUBFLOW
	 !-->
   <subflow-state id="service.subflow" subflow="service">
      <input name="operator" value="flowScope.operator"/>
      <transition on="toParent" to="selection.view"/>
   </subflow-state>

	<!-- 
	 ! user
	 ! SUBFLOW
	 !-->
   <subflow-state id="user.subflow" subflow="user">
      <input name="operator" value="flowScope.operator"/>
      <input name="entity" value="flowScope.entity"/>
      <input name="userGroup" value="flowScope.userGroup"/>
      <input name="user" value="flowScope.user"/>
      <output name="entity" value="flowScope.entity"/>
      <transition on="toSelection" to="entityBrowse.view"/>
      <transition on="toHome" to="toHome"/>
   </subflow-state>

	<!-- 
	 ! user
	 ! BROWSE VIEW
	 !-->
   <view-state id="userBrowse.view" view="/frame2">
		<!-- 
		 ! before browse
		 -->
      <on-render>
         <evaluate expression="userGroupAction.prepareTarget"/>
         <evaluate expression="userGroupAction.resolveAuthorization"/>
         <set name="viewScope.forward" value="'toSelection'"/>
         <set name="viewScope.sidebar" value="'user/userGroup_bar'"/>
         <set name="viewScope.template" value="'user/userGroup'"/>
      </on-render>
		<!-- 
		 ! local transitions
		 -->
      <transition on="editUserRole" to="userBrowse.view"/>
      <!-- 
      <transition on="selectUser" to="userAssociation.subflow">
         <evaluate expression="userAssociationAction.selectTarget"/>
      </transition>
      -->
		<!-- 
		 ! backward transitions
		 -->
      <transition on="toSelection" to="entityBrowse.view"/>
   </view-state>

	<!-- 
	 ! userGroup
	 ! SUBFLOW
	 !-->
   <subflow-state id="userGroup.subflow" subflow="userGroup">
      <input name="operator" value="flowScope.operator"/>
      <input name="entity" value="flowScope.entity"/>
      <input name="userGroup" value="flowScope.userGroup"/>
      <output name="entity" value="flowScope.entity"/>
      <transition on="toSelection" to="entityBrowse.view"/>
      <transition on="toHome" to="toHome"/>
   </subflow-state>

	<!--
	 ! End states 
	// -->
   <end-state id="toHome"/>
   <end-state id="toSelection"/>

	<!--
	 ! Globals 
	// -->
   <global-transitions>
      <transition on="toHome" to="toHome"/>
      <transition on="forbidden" to="toHome"/>
   </global-transitions>

</flow>