<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<secured attributes="ROLE_ADMIN_MANAGER" />
	
	<persistence-context />

	<on-start>
	    <set name="flowScope.basePath" value="'entity/'"/>
		<set name="flowScope.assign"   value="'assign'" />
		<set name="conversationScope.entityStyle" value="'white.css'" />
	</on-start>
	
	<!--
	 ! This flow implements the Helianto/Webflow selection pattern
	 ! to list and select user associations. 
	 -->

	<action-state id="filter">
		<evaluate expression="adminAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="selection.view" />
	</action-state>
	
	<!-- 
	 ! This selection must show any user association where the current user is child and
	 ! the parent group has the key 'user'.
	 -->

	<view-state id="selection.view" view="/frame2" model="userAssociationFilter" >
   
        <on-render>
			<set name="viewScope.forward"  value="'selection_fwd'"/>
			<set name="viewScope.sidebar"  value="'selection_filter'"/>
			<set name="viewScope.template" value="'selection'"/>
        </on-render>

		<transition on="toProvince" to="province.subflow"/>
		<transition on="toKeyType" to="keyType.subflow"/>
		<transition on="toService" to="service.subflow"/>

		<transition on="filter" to="filter" />
		<transition on="selectEntity" to="admin.subflow" />
<!--		<transition on="createEntity" to="admin.subflow" />-->
		
    </view-state>
   
	<!-- 
	 ! entity
	 ! SUBFLOW
	 !-->
	<subflow-state id="admin.subflow" subflow="_admin">
		<input name="userAssociation" value="userAssociationFilter.item"/>
		<transition on="toSelection" to="filter" />
		<transition on="toHome" to="filter" />
	</subflow-state>

	<!-- 
	 ! province
	 ! SUBFLOW
	 !-->
   <subflow-state id="province.subflow" subflow="_provinceSelection">
      <transition on="toHome" to="selection.view"/>
   </subflow-state>

	<!-- 
	 ! keyType
	 ! SUBFLOW
	 !-->
   <subflow-state id="keyType.subflow" subflow="keyType">
      <input name="operator" value="flowScope.operator"/>
      <transition on="toParent" to="selection.view"/>
   </subflow-state>

	<!-- 
	 ! service
	 ! SUBFLOW
	 !-->
   <subflow-state id="service.subflow" subflow="service">
      <input name="operator" value="flowScope.operator"/>
      <transition on="toParent" to="selection.view"/>
   </subflow-state>

	<!--
	 ! End states 
	// -->
   <end-state id="toHome"/>

	<!--
	 ! Globals 
	// -->
   <global-transitions>
      <transition on="toHome" to="toHome"/>
      <transition on="forbidden" to="toHome"/>
   </global-transitions>

</flow>