<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
        
	<secured attributes="ROLE_ADMIN_MANAGER" />
   
	<persistence-context />

	<input name="userGroup"/>
	
	<on-start>
	   <set name="flowScope.basePath" value="'entity/'"/>
	   <set name="flowScope.assign"   value="'assign'"/>
	</on-start>

	<action-state id="createIfNeeded">
		<evaluate expression="userGroupAction.create(flowScope, currentUser.principal)" />
        <transition on="edit" to="edit.view"/>
        <transition to="prefilter"/>
	</action-state>
	
	<action-state id="prefilter">
	    <set name="flowScope.parent" value="userGroup" />
		<transition on="success" to="filter" />
	</action-state>

	<action-state id="filter">
		<evaluate expression="userAssociationAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="show.view" />
	</action-state>

   <view-state id="show.view" view="/frame2" model="userAssociationFilter">

      <on-render>
         <set name="viewScope.sidebar"  value="'entity_bar'"/>
         <set name="viewScope.template" value="'entity'"/>
      </on-render>

      <transition on="selectUserAssociation" to="userAssociation.subflow" />
      <transition on="toSelection" to="toSelection"/>
      
   </view-state>

	<!-- 
	 ! province
	 ! SUBFLOW
	 !-->
   <subflow-state id="userAssociation.subflow" subflow="userAssociation">
		<input name="userAssociation" value="userAssociationFilter.item"/>
		<input name="userGroup"       value="userAssociationFilter.item"/>
      <transition on="toParent" to="selection.view"/>
   </subflow-state>

   <view-state id="entityEdit.view" view="/frame2" model="userGroup" >
		<!-- 
		 ! before browse
		 -->
      <on-render>
         <set name="viewScope.sidebar"  value="'entity_bar'"/>
         <set name="viewScope.template" value="'entity_form'"/>
      </on-render>
		<!-- 
		 ! local transitions
		 -->
      <transition on="storeTarget" to="entityBrowse.view">
         <evaluate expression="entityAction.bindAndValidate"/>
         <evaluate expression="entityAction.storeTarget"/>
      </transition>
      <transition on="cancelForm" to="entityBrowse.view"/>
   </view-state>

	<!--
	 ! End states 
	// -->
   <end-state id="toHome"/>
   <end-state id="toSelection"/>

	<!--
	 ! Globals 
	// -->
   <global-transitions>
      <transition on="toHome" to="toHome"/>
      <transition on="forbidden" to="toHome"/>
   </global-transitions>

</flow>