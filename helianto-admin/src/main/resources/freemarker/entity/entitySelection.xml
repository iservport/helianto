<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<secured attributes="ROLE_ADMIN_MANAGER" />

	<on-start>
		<set name="flowScope.assign" value="'entity/assign'" />
		<set name="conversationScope.entityStyle" value="'white.css'" />
	</on-start>

	<action-state id="filter">
		<evaluate expression="homeAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="selection.view" />
	</action-state>

	<view-state id="selection.view" view="/frame2" model="userGroupFilter" >
   
        <on-render>
			<set name="viewScope.forward" value="'entity/selection_fwd'"/>
			<set name="viewScope.sidenav" value="'entity/selection_nav'"/>
			<set name="viewScope.sidebar" value="'entity/selection_filter'"/>
			<set name="viewScope.template" value="'entity/selection'"/>
        </on-render>

		<transition on="toProvince" to="province.subflow"/>
		<transition on="toKeyType" to="keyType.subflow"/>
		<transition on="toService" to="service.subflow"/>

		<transition on="filter" to="filter" />
		<transition on="selectEntity" to="entity.subflow" />
		<transition on="createEntity" to="entity.subflow" />
		
    </view-state>
   
	<!-- 
	 ! entity
	 ! SUBFLOW
	 !-->
	<subflow-state id="entity.subflow" subflow="entity">
		<input name="userGroup" value="userGroupFilter.item"/>
		<transition on="toSelection" to="filter" />
	</subflow-state>

	<!-- 
	 ! province
	 ! SUBFLOW
	 !-->
   <subflow-state id="province.subflow" subflow="province">
      <input name="operator" value="flowScope.operator"/>
      <transition on="toParent" to="selection.view"/>
   </subflow-state>

	<!-- 
	 ! keyType
	 ! SUBFLOW
	 !-->
   <subflow-state id="keyType.subflow" subflow="keyType">
      <input name="operator" value="flowScope.operator"/>
      <transition on="toParent" to="selection.view"/>
   </subflow-state>

	<!-- 
	 ! service
	 ! SUBFLOW
	 !-->
   <subflow-state id="service.subflow" subflow="service">
      <input name="operator" value="flowScope.operator"/>
      <transition on="toParent" to="selection.view"/>
   </subflow-state>

	<!--
	 ! End states 
	// -->
   <end-state id="toHome"/>

	<!--
	 ! Globals 
	// -->
   <global-transitions>
      <transition on="toHome" to="toHome"/>
      <transition on="forbidden" to="toHome"/>
   </global-transitions>

</flow>