<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        abstract="true">

	<secured attributes="ROLE_USER_ALL, ROLE_ADMIN_MANAGER" />

	<view-state id="selection.view" view="/frame2"  >

		<on-render>
			<set name="viewScope.template" value="'selection'" />
			<set name="viewScope.sidebar"  value="'filter'" />
		</on-render>

		<transition on="applyFilter"       to="filter" />
		
		<!-- flows in menu bar -->
		<transition on="toServices"        to="toServices" />
		<transition on="toProvinces"       to="toProvinces"/>
		<transition on="toKeyTypes"        to="toKeyTypes"/>
		
	</view-state>
	
	<view-state id="show.view"      view="/frame2"  >

		<!-- flows in menu bar -->
		<transition on="toServices"        to="toServices" />
		<transition on="toProvinces"       to="toProvinces"/>
		<transition on="toKeyTypes"        to="toKeyTypes"/>
		
	</view-state>
	
	<end-state id="toServices"       view="redirect:_serviceSelection" />

	<end-state id="toProvinces"      view="redirect:_serviceSelection" />

	<end-state id="toKeyTypes"       view="redirect:_serviceSelection" />

	<end-state id="toAuthorization" view="redirect:_authorization" />

</flow>