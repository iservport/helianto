<hibernate-mapping default-lazy="false">
	<class table="core_entitykey" name="org.helianto.core.EntityKey">
		<!-- 
			ENTITY KEY
			============================================= 
		-->
		<meta attribute="class-description">
			<![CDATA[
<p>
A domain class to accept different key numbers for each <code>Entity</code>.
</p>

@author Mauricio Fernandes de Castro
@version $Id: helianto-entity1.hbm.xml,v 1.3 2006/03/20 16:11:40 iserv Exp $
				]]>
		</meta>
		<!-- 
				id
		-->
		<id name="id" type="int">
			<generator class="native" />
		</id>
		<natural-id>
			<!-- 
				entity
			-->
			<many-to-one name="entity"
				class="org.helianto.core.Entity">
				<meta attribute="use-in-equals">true</meta>
				<column name="entityId"/>
			</many-to-one>
			<!-- 
				key type
			-->
			<property name="keyType" type="int">
				<meta attribute="use-in-equals">true</meta>
				<column name="keyType"/>
			</property>
			<!-- 
				key number
			-->
			<property name="keyNumber" type="string">
				<meta attribute="use-in-equals">true</meta>
				<column name="keyNumber" length="20"/>
			</property>
		</natural-id>
	</class>
</hibernate-mapping>
