<hibernate-mapping default-lazy="false">
	<class table="core_home" 
		name="org.helianto.core.Home">
		<!-- 
				HOME
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A domain object to represent a home, unique by a short name.
</p>

<p>
Home locations are the source for comunication between server and
e-mail recipients, so they hold the information necessary to connect to 
external servers. They can be configured to represent a geographical
limit, bound to a language or country, or according to any territory
arrangement.
</p>

<p>
At least one default (root) home must be defined per installation.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
  				base class with non-persistent fields
		-->
		<meta attribute="extends" inherit="false">AbstractHome</meta>
		<!-- 
  				id
		-->
		<id name="id" type="int">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
					home name (unique)
			-->
			<property name="homeName" type="string">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="homeName" length="20"/>
			</property>
		</natural-id>
		<!-- 
				parent
		-->
		<many-to-one name="parent" 
			class="org.helianto.core.Home">
			<column name="parentId" not-null="false"/>
		</many-to-one>
		<!-- 
				language
		-->
		<property name="language" type="string" length="2" not-null="true"/>
		<!-- 
				country
		-->
		<property name="country" type="string" length="2" not-null="true"/>
		<!-- 
				http address
		-->
		<property name="httpAddress" type="string" length="64"/>
		<!-- 
				home desc
		-->
		<property name="homeDesc" type="string" length="64"/>
		<!-- 
				date added
		-->
		<property name="added" type="date"/>
		<!-- 
				server mode: local or enterprise
		-->
		<property name="serverMode" type="char" not-null="true"/>
		<!-- 
				mail transport data
		-->
		<component name="mailTransportData" 
			class="org.helianto.core.MailTransportData">
			<!-- 
				mail host
			-->
			<property name="smtpHost" type="string" length="64"/>
			<!-- 
				mail user
			-->
			<property name="smtpUser" type="string" length="32"/>
			<!-- 
				mail password
			-->
			<property name="smtpPassword" type="string" length="20"/>
		</component>
		<!-- 
				mail access data
		-->
		<component name="mailAccessData" 
			class="org.helianto.core.MailAccessData">
			<!-- 
				store type
			-->
			<property name="storeType" type="string" length="12"/>
			<!-- 
				store host
			-->
			<property name="host" type="string" length="64"/>
			<!-- 
				store user
			-->
			<property name="user" type="string" length="32"/>
			<!-- 
				store password
			-->
			<property name="password" type="string" length="20"/>
		</component>
	</class>
</hibernate-mapping>