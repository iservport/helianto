<hibernate-mapping default-lazy="false">
	<class table="core_partner" 
		name="org.helianto.core.Self" 
		discriminator-value="S">
		<!-- 
				SELF
				============================================= 
		-->
		<meta attribute="class-description">
				<![CDATA[
<p>
Represents the organization itself. 
</p>

@author Mauricio Fernandes de Castro
				]]>
        </meta>
		<!-- 
  				id
		-->
		<id name="id" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		<discriminator column="role" type="char"/>
		<natural-id>
			<!-- 
	  				entity
			-->
			<many-to-one name="entity" cascade="save-update,merge"
				class="org.helianto.core.Entity">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="entityId"/>
			</many-to-one>
			<!-- 
	  				alias
			-->
			<property name="alias" type="string">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="alias" length="20"/>
			</property>
		</natural-id>
		<!-- 
  				Partner
		-->
		<subclass name="org.helianto.core.Partner" 
			discriminator-value="P">
			<!-- 
				PARTNER
				============================================= 
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Represents a relationship to other entities. 
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			<!-- 
	  				related to (another entity)
			-->
			<many-to-one name="related"  cascade="save-update,merge"
				class="org.helianto.core.Entity">
				<column name="relId"></column>
			</many-to-one>
			<!-- 
	  				share mode (restricted, full)
			-->
			<property name="shareMode" type="char" not-null="true"/>
			<!-- 
	  				relatedSince
			-->
			<property name="relatedSince" type="date"/>
			<!--
					roles
			-->
			<set name="roles" inverse="true">
				<key column="partnerId"/>
				<one-to-many class="org.helianto.core.PartnerRole"/>
			</set>
		</subclass>
	</class>
</hibernate-mapping>
