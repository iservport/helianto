<hibernate-mapping default-lazy="false">
	<!-- 
		RESOURCE PARAMETER
		============================================= 
	-->
	<class table="process_resourceparam"
		name="org.helianto.process.ResourceParameter">
		<meta attribute="class-description" inherit="false">
			<![CDATA[
<p>
A class to represent resource parameters.
</p>

@author Mauricio Fernandes de Castro
@version $Id: $
				]]>
		</meta>
		<!-- 
			id
		-->
		<id name="id" type="int">
			<column name="id"/>
			<generator class="native" />
		</id>
		<!-- 
			natural id
		-->
		<natural-id mutable="false">
			<!-- 
				entity
			-->
			<many-to-one name="entity"
				class="org.helianto.core.Entity">
				<meta attribute="use-in-equals">true</meta>
				<column name="entityId" />
			</many-to-one>
			<!-- 
				code
			-->
			<property name="parameterCode" type="string">
				<meta attribute="use-in-equals">true</meta>
				<column name="parameterCode" length="20" />
			</property>
		</natural-id>
		<!-- 
			parent
		-->
		<many-to-one name="parent"
			class="org.helianto.process.ResourceParameter">
			<column name="parentId" not-null="false" />
		</many-to-one>
		<!-- 
			unit
		-->
		<many-to-one name="unit"
			class="org.helianto.process.Unit">
			<column name="untId" />
		</many-to-one>
		<!-- 
			name
		-->
		<property name="paramName" type="string" length="64" />
		<!-- 
			description
		-->
		<property name="paramDesc" type="string" length="256" />
		<!-- 
			text only
		-->
		<property name="textOnly" type="boolean" >
			<column name="textOnly" not-null="true" default="0"/>
		</property>
	</class>
</hibernate-mapping>