<hibernate-mapping default-lazy="false">
	<!-- 
		PROCESS RESOURCES
		============================================= 
	-->
	<class table="process_resources"
		name="org.helianto.process.ResourceGroup" discriminator-value="G">
		<meta attribute="class-description" inherit="false">
			<![CDATA[
<p>
A class to represent a process resource group.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
			id
		-->
		<id name="id" type="int">
			<generator class="native" />
		</id>
		<discriminator column="type" type="char" />
		<!-- 
			natural key
		-->
		<natural-id>
			<!-- 
				entity
			-->
			<many-to-one name="entity" cascade="save-update,merge"
			    class="org.helianto.core.Entity">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="entityId" />
			</many-to-one>
			<!-- 
				resource code
			-->
			<property name="resourceCode" type="string">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="resourceCode" length="20" />
			</property>
		</natural-id>
		<!-- 
			parent
		-->
		<many-to-one name="parent" class="org.helianto.process.ResourceGroup"
			column="parentId" not-null="false" cascade="merge" />
		<!-- 
			resource name
		-->
		<property name="resourceName" type="string" length="128" />
		<!-- 
			resource type
		-->
		<property name="resourceType" type="char" not-null="true" />
		<!-- 
			resource subclass
		-->
		<subclass name="org.helianto.process.Resource"
			discriminator-value="R">
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A class to represent a process resource.
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			<!-- 
				serial number
			-->
			<property name="serialNumber" type="string"  length="20"/>
			<!-- 
				resource state
			-->
			<property name="resourceState" type="char">
				<column name="resourceState" not-null="true" default="'I'"/>
			</property>
			<!-- 
				manufacturer
			-->
			<many-to-one name="manufacturer" class="org.helianto.core.Partner">
				<column name="manufacturerId"/>
			</many-to-one>
			<!-- 
				owner
			-->
			<many-to-one name="owner" class="org.helianto.core.Partner">
				<column name="ownerId"/>
			</many-to-one>
			<!-- 
				key resource
			-->
			<property name="keyResource" type="boolean">
				<column name="keyResource" not-null="true" default="0"/>
			</property>
		</subclass>
	</class>
</hibernate-mapping>