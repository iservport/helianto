<hibernate-mapping default-lazy="false">
	<class table="core_role" 
		name="org.helianto.core.Role">
		<!-- 
				ROLE
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
			<![CDATA[
<p>
Persist roles.
</p>

@author Mauricio Fernandes de Castro
@version $Id: helianto-core6.hbm.xml 70 2006-04-16 21:21:57 -0300 (Dom, 16 Abr 2006) iserv $
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="int">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
					user
			-->
			<many-to-one name="user" 
				class="org.helianto.core.User" cascade="merge">
				<meta attribute="use-in-equals">true</meta>
				<column name="userId"/>
			</many-to-one>
			<!-- 
					role name 
			-->
			<property name="roleName" type="string">
				<meta attribute="use-in-equals">true</meta>
				<column name="roleName"	length="20"/>
			</property>
		</natural-id>
		<!-- 
				service
		-->
		<many-to-one name="service" 
			class="org.helianto.core.Service" cascade="merge">
			<column name="serviceId"/>
		</many-to-one>
	</class>
</hibernate-mapping>