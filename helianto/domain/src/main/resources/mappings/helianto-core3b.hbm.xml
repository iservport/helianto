<hibernate-mapping default-lazy="false">
	<class table="core_cred" 
		name="org.helianto.core.Credential">
		<!-- 
			CREDENTIAL
			============================================= 
		-->
		<meta attribute="class-description" inherit="false">
			<![CDATA[
<p>
Provides <code>Identity</code> with authentication information. 
</p>

@author Mauricio Fernandes de Castro
			]]>
		</meta>
		<!-- 
  				base class with non-persistent fields
		-->
		<meta attribute="extends">AbstractCredential</meta>
		<!-- 
  				id
		-->
		<id name="id" type="long">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
					identity
			-->
			<many-to-one name="identity" cascade="save-update,merge"
			    class="org.helianto.core.Identity">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="idntId"/>
			</many-to-one>
		</natural-id>
		<!-- 
				password
		-->
		<property name="password" type="string" length="20"/>
		<!-- 
				credential state: active, suspended, cancelled
		-->
		<property name="credentialState" type="char" not-null="true"/>
		<!-- 
				lastModified
		-->
		<property name="lastModified" type="date"/>
		<!-- 
				expired
		-->
		<property name="expired" type="date"/>
	</class>
</hibernate-mapping>
