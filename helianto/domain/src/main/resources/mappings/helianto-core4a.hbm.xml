<hibernate-mapping default-lazy="false">
	<class table="core_user" 
	    name="org.helianto.core.UserGroup"
	    discriminator-value="G">
		<!-- 
				USER
				=============================================
		-->
		<meta attribute="class-description" inherit="false">
			<![CDATA[
<p>
The user group.
</p>

<p>
An user account represents the association between an <code>Identity</code>
and an <code>Entity</code>. If authorization fails at user level, the authorization 
service will look-up the user hierarchy roles as well.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="long">
			<generator class="native"/>
		</id>
		<discriminator column="type" type="char" />
		<natural-id mutable="false">
			<!-- 
					entity
			-->
			<many-to-one name="entity" 
				class="org.helianto.core.Entity" cascade="save-update,merge">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="entityId"/>
			</many-to-one>
			<!-- 
					identity
			-->
			<many-to-one name="identity" 
				class="org.helianto.core.Identity" cascade="save-update,merge">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="identityId"/>
			</many-to-one>
		</natural-id>
		<!-- 
				parent
		-->
		<many-to-one name="parent" cascade="save-update,merge"
			class="org.helianto.core.UserGroup"/>
		<!--
				roles
		-->
		<set name="roles" inverse="true">
			<key column="userId"/>
			<one-to-many class="org.helianto.core.UserRole"/>
		</set>
		<!-- 
			user subclass
		-->
		<subclass 
			name="org.helianto.core.User"
			discriminator-value="U">
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
The user account.
</p>

<p>
An user account represents the association between an <code>Identity</code>
and an <code>Entity</code>. Such association allows for a singly identified 
actor, i.e. a person or any other organizational <code>Identity</code>, to keep
a single authentication scheme and have multiple authorization schemes, one per
<code>Entity</code>.
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			<!-- 
					user type: internal, external 
			-->
			<property name="userType" type="char" not-null="true"/>
			<!-- 
					account non expired 
			-->
			<property name="accountNonExpired" type="boolean" not-null="true"/>
			<!-- 
					account non locked 
			-->
			<property name="accountNonLocked" type="boolean" not-null="true"/>
		</subclass>
	</class>
</hibernate-mapping>
