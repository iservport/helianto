<hibernate-mapping default-lazy="false">
	<!-- 
		DOCUMENT
		============================================= 
	-->
	<class table="process_document" name="org.helianto.process.Document"
		discriminator-value="0">
		<meta attribute="class-description" inherit="false">
			<![CDATA[
<p>
A base class to any class that requires version control.
</p>

<p>
Tipical descendants are parts, processes and organizational process
documents.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
			id
		-->
		<id name="id" type="long" unsaved-value="null">
			<generator class="native" />
		</id>
		<discriminator column="type" type="int" />
		<!-- 
			parent entity
		-->
		<many-to-one name="entity" class="org.helianto.core.Entity">
			<meta attribute="use-in-equals">true</meta>
			<column name="entityId" unique-key="entity" not-null="true" />
		</many-to-one>
		<!-- 
			document code
		-->
		<property name="docCode" type="string">
			<meta attribute="use-in-equals">true</meta>
			<column name="docCode" length="24" unique-key="entity"
				not-null="true" />
		</property>
		<!-- 
			document name
		-->
		<property name="docName" type="string" length="128" />
		<!-- 
			document url
		-->
		<property name="docUrl" type="string" length="64" />
		<!-- 
			children
		-->
		<list name="children" inverse="true" cascade="merge">
			<key column="id" />
			<list-index column="sequence" />
			<one-to-many class="org.helianto.process.Tree" />
		</list>
		<!-- 
			PART
			============================================= 
		-->
		<subclass name="org.helianto.process.Part"
			discriminator-value="1">
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A part.
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			<!-- 
				has drawing
			-->
			<property name="hasDrawing" type="boolean" not-null="true" />
			<!-- 
				materialType
			-->
			<many-to-one name="materialType"
				class="org.helianto.process.MaterialType">
				<column name="materialTypeId" />
			</many-to-one>
		</subclass>
		<!-- 
			PROCESS
			============================================= 
		-->
		<subclass name="org.helianto.process.Process"
			discriminator-value="3">
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A process.
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			<!-- 
				internal number
			-->
			<property name="internalNumber" type="long"
				not-null="false" />
			<!-- 
				CONTROL PLAN
				============================================= 
			-->
			<subclass name="org.helianto.process.ControlPlan"
				discriminator-value="3">
				<meta attribute="class-description" inherit="false">
					<![CDATA[
<p>
A control plan.
</p>

@author Mauricio Fernandes de Castro
				]]>
				</meta>
				<!-- 
					phase
				-->
				<property name="phase" type="int" not-null="true" />
			</subclass>
		</subclass>
		<!-- 
			OPERATION
			============================================= 
		-->
		<subclass name="org.helianto.process.Operation"
			discriminator-value="4">
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
An operation.
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			<!-- 
				operation type
			-->
			<property name="operationType" type="int" not-null="true" />
			<!-- 
				operation time
			-->
			<property name="operationTime" type="long" not-null="true" />
			<!-- 
				setups 
			-->
			<list name="setups" inverse="true" cascade="merge">
				<key column="id" />
				<list-index column="priority" />
				<one-to-many class="org.helianto.process.Setup" />
			</list>
		</subclass>
		<!-- 
			CHARACTERISTIC
			============================================= 
		-->
		<subclass name="org.helianto.process.Characteristic"
			discriminator-value="5">
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A process characteristic.
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			<!-- 
				classification
			-->
			<property name="classification" type="int" not-null="true" />
		</subclass>
		<!-- 
			SPECIFICATION
			============================================= 
		-->
		<subclass name="org.helianto.process.Specification"
			discriminator-value="6">
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A process characteristic specification.
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			<!-- 
				unit
			-->
			<many-to-one name="unit" class="org.helianto.process.Unit"
				column="unitId" not-null="false" />
			<component name="specificationLimit"
				class="org.helianto.process.SpecificationLimit">
				<!-- 
					SPECIFICATION LIMIT
					=============================================
				-->
				<meta attribute="class-description" inherit="false">
					<![CDATA[
<p>
Specification limits.
</p>
	
@author Mauricio Fernandes de Castro
				]]>
				</meta>
				<!-- 
					left limit
				-->
				<property name="leftLimt" type="double" not-null="true" />
				<!-- 
					right limit
				-->
				<property name="rightLimt" type="double"
					not-null="true" />
				<!-- 
					nominal value
				-->
				<property name="nominalValue" type="double"
					not-null="true" />
				<!-- 
					specification type
				-->
				<property name="specificationType" type="int"
					not-null="true" />
			</component>
		</subclass>
	</class>
</hibernate-mapping>