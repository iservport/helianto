<hibernate-mapping default-lazy="false">
	<class table="core_partnerrole" 
		name="org.helianto.core.PartnerRole" 
		discriminator-value="N">
		<!-- 
				PARTNER ROLE
				============================================= 
		-->
		<meta attribute="class-description">
				<![CDATA[
<p>
Describe the different <code>Partner</code> roles,
like customers, suppliers, banks, etc. 
</p>

@author Mauricio Fernandes de Castro
				]]>
        </meta>
		<!-- 
  				id
		-->
		<id name="id" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		<discriminator column="role" type="char"/>
		<natural-id>
			<!-- 
	  				partner
			-->
			<many-to-one name="partner" cascade="save-update,merge"
				class="org.helianto.core.Partner">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="partnerId"/>
			</many-to-one>
			<property name="partnerRole" type="char" formula="role"/>
		</natural-id>
		<!-- 
  				account
		-->
		<!--many-to-one name="account" 
			class="org.helainto.account.Account">
			<column name="accountId"/>
		</many-to-one-->
		<!-- 
  				priority
		-->
		<property name="priority" type="char">
			<column name="priority" not-null="true" default="'z'"/>
		</property>
		<!-- 
  				partner state
		-->
		<property name="partnerState" type="char">
			<column name="partnerState" not-null="true" default="'A'"/>
		</property>
		<!-- 
  				number assigned remotely (by the customer, supplier, etc.)
		-->
		<property name="numberAssignedRemotely" type="string" 
			length="20"/>
		<!-- 
  				imported key (legacy systems)
		-->
		<property name="importedKey" type="long"/>
		<!-- 
  				profile
		-->
		<property name="profile" type="string" length="255"/>
		<!-- 
  				Division
		-->
		<subclass name="org.helianto.core.Division" 
			discriminator-value="D">
			<!-- 
				DIVISION
				============================================= 
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist a relationship to a division. 
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			<property name="divisionType" type="char" not-null="true" formula="' '"/>
		</subclass>
		<subclass name="org.helianto.core.Customer" 
			discriminator-value="C">
			<!-- 
				CUSTOMER
				============================================= 
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist a relationship to a customer 
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			<many-to-one name="deliverTo" 
				class="org.helianto.core.Partner" 
				column="deliverId">
			</many-to-one>
		</subclass>
		<subclass name="org.helianto.core.Supplier" 
			discriminator-value="S">
			<!-- 
				SUPPLIER
				============================================= 
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist a relationship to a supplier 
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			<property name="supplierAsessment" type="float"/>
			<many-to-one name="buyer" 
				class="org.helianto.core.User">
				<column name="buyerId"/>
			</many-to-one>
		</subclass>
		<subclass name="org.helianto.core.Bank" 
			discriminator-value="B">
			<!-- 
				BANK
				============================================= 
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist a relationship to a bank 
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			<property name="checkFormFile" type="string" length="10"/>
		</subclass>
		<subclass name="org.helianto.core.Manufacturer" 
			discriminator-value="M">
			<!-- 
				MANUFACTURER
				============================================= 
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist a relationship to a resource manufaturer. 
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			
		</subclass>
		<subclass name="org.helianto.core.Agent" 
			discriminator-value="B">
			<!-- 
				AGENT
				============================================= 
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist a relationship to an Agent, like a sales representative. 
</p>

@author Mauricio Fernandes de Castro
				]]>
			</meta>
			
		</subclass>
	</class>
</hibernate-mapping>
