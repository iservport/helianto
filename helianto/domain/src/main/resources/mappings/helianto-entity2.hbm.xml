<hibernate-mapping default-lazy="false">
	<class table="core_contact" 
		name="org.helianto.core.Contact" 
		discriminator-value="C">
		<!-- 
				CONTACT
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
The contact domain class.
</p>

@author Mauricio Fernandes de Castro
@version $Id: helianto-entity2.hbm.xml 80 2006-04-19 21:56:03 -0300 (Qua, 19 Abr 2006) iserv $
				]]>
        </meta>
		<id name="id" type="long">
			<generator class="native"/>
		</id>
		<discriminator column="type" type="char"/>
		<many-to-one name="partner" 
			class="org.helianto.core.Partner">
			<meta attribute="use-in-equals">true</meta>
			<column name="partnerId" unique-key="unNumber" 
				not-null="true"/>
		</many-to-one>
		<many-to-one name="identity" cascade="save-update"
			class="org.helianto.core.Identity">
			<meta attribute="use-in-equals">true</meta>
			<column name="idntId" unique-key="unNumber" 
				not-null="true"/>
		</many-to-one>
		<property name="internalNumber" type="int">
			<meta attribute="use-in-equals">true</meta>
			<column name="internalNumber" unique-key="unNumber"
				not-null="true"/>
		</property>
		<property name="jobReference" type="string" length="20"/>
		<property name="department" type="string" length="20"/>
		<property name="priority" type="int" not-null="true"/>
		<!--set name="phones" inverse="true" cascade="all">
			<key column="contactId"/>
			<one-to-many class="org.helianto.core.Phone"/>
		</set-->
		<subclass name="org.helianto.core.HumanResource" 
			discriminator-value="H">
			<!-- 
				HUMAN RESOURCE
				============================================= 
			-->
			<meta attribute="class-description" inherit="false"> A 
				class to persist Resources. </meta>
			<property name="resourceState" type="int" not-null="true"/>
			<property name="resourceCategory" type="int" not-null="true"/>
			<property name="born" type="date"/>
			<property name="hired" type="date"/>
			<property name="dismissed" type="date"/>
		</subclass>
	</class>
</hibernate-mapping>
