<hibernate-mapping  default-lazy="false">
	<class table="core_vocabulary"
		name="org.helianto.core.Vocabulary">
		<!-- 
				VOCABULARY
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A class to standardize vocabulary across domain objects.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="int">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
				entity
			-->
			<many-to-one name="entity" cascade="merge"
				class="org.helianto.core.Entity">
				<meta attribute="use-in-equals">true</meta>
				<column name="entityId"/>
			</many-to-one>
			<!-- 
				code
			-->
			<property name="code" type="string">
				<meta attribute="use-in-equals">true</meta>
				<column name="code" length="8"/>
			</property>
		</natural-id>
		<!-- 
				parent
		-->
		<many-to-one name="parent" 
			class="org.helianto.core.Vocabulary">
			<column name="parent" not-null="false"/>
		</many-to-one>
		<!-- 
				name
		-->
		<property name="name" type="string" length="64"/>
	</class>
</hibernate-mapping>
