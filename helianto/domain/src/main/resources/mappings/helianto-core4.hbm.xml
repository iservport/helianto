<hibernate-mapping default-lazy="false">
	<class table="core_usertable" 
	    name="org.helianto.core.User">
		<!-- 
				USER
				=============================================
		-->
		<meta attribute="class-description" inherit="false">
			<![CDATA[
<p>
Persist the user account.
</p>

@author Mauricio Fernandes de Castro
@version $Id: helianto-core4.hbm.xml,v 1.4 2006/03/20 16:11:40 iserv Exp $
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="long">
			<generator class="native"/>
		</id>
		<!-- 
				entity
		-->
		<many-to-one name="entity" 
			class="org.helianto.core.Entity" cascade="all">
			<meta attribute="use-in-equals">true</meta>
			<column name="entityId" not-null="true" 
				unique-key="unique1"/>
		</many-to-one>
		<!-- 
				credential
		-->
		<many-to-one name="credential" 
			class="org.helianto.core.Credential" cascade="all">
			<meta attribute="use-in-equals">true</meta>
			<column name="credentialId" not-null="true" 
				unique-key="unique1"/>
		</many-to-one>
		<!-- 
				parent
		-->
		<many-to-one name="parent" cascade="all"
			class="org.helianto.core.User"/>
		<!-- 
				account non expired 
		-->
		<property name="accountNonExpired" type="boolean" not-null="true"/>
		<!-- 
				account non locked 
		-->
		<property name="accountNonLocked" type="boolean" not-null="true"/>
		<!-- 
				user type: internal, external 
		-->
		<property name="userType" type="char" not-null="true"/>
		<!--
				roles
		-->
		<set name="roles" inverse="true">
			<key column="userId"/>
			<one-to-many class="org.helianto.core.Role"/>
		</set>
	</class>
</hibernate-mapping>
