<beans>

	<!--
			Home creator implementation	
	-->
	<bean id="homeCreator" 
		class="org.helianto.core.creation.HomeCreatorImpl"/>
	<!--
			Entity creator implementation	
	-->
	<bean id="entityCreator" 
		class="org.helianto.core.creation.EntityCreatorImpl"/>
	<!--
			Partner creator implementation	
	-->
	<bean id="partnerCreator" 
		class="org.helianto.core.creation.PartnerCreatorImpl"/>
	<!--
			User creator implementation	
	-->
	<bean id="userCreator" 
		class="org.helianto.core.creation.UserCreatorImpl"/>
	<!--
			Home dao implementation	
	-->
	<bean id="homeDao" 
		class="org.helianto.core.hibernate.HomeDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			Entity dao implementation	
	-->
	<bean id="entityDao" 
		class="org.helianto.core.hibernate.EntityDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			Partner dao implementation	
	-->
	<bean id="partnerDao" 
		class="org.helianto.core.hibernate.PartnerDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			Credential dao implementation	
	-->
	<bean id="credentialDao" 
		class="org.helianto.core.hibernate.CredentialDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			User dao implementation	
	-->
	<bean id="userDao" 
		class="org.helianto.core.hibernate.UserDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			Simple core service bean	
	-->
	<bean id="simpleCoreMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="simpleCoreTarget"
				class="org.helianto.core.service.SimpleCoreMgrImpl">
				<property name="homeCreator" ref="homeCreator"/>
				<property name="entityCreator" ref="entityCreator"/>
				<property name="userCreator" ref="userCreator"/>
				<property name="entityDao" ref="entityDao"/>
				<property name="userDao" ref="userDao"/>
				<!-- property name="javaMailAdapter" ref="javaMailAdapter"/-->
			</bean>
		</property>
	</bean>
	
</beans>
