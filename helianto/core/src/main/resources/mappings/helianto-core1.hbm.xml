<hibernate-mapping default-lazy="false">
	<class table="core_supervisor" 
		name="org.helianto.core.Supervisor" 
		discriminator-value="S">
		<!-- 
				SUPERVISOR
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A domain object to represent a supervisor, unique by a short name.
</p>

<p>
Supervisors are the source for comunication between server and
e-mail recipients, so they hold the information necessary to connect to 
external servers. They can be configured to represent a geographical
limit, bound to a language or country, or according to any territory
arrangement.
</p>

<p>
At least one default (root) supervisor must be defined per installation.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="int" unsaved-value="null">
			<generator class="native"/>
		</id>
		<discriminator column="type" type="char"/>
		<!-- 
				parent
		-->
		<many-to-one name="parent" 
			class="org.helianto.core.Supervisor">
			<column name="parentId" not-null="false"/>
		</many-to-one>
		<!-- 
				supervisor name (unique)
		-->
		<property name="supervisorName" type="string">
			<meta attribute="use-in-equals">true</meta>
			<column name="supervisorName" length="20" not-null="true" 
				unique="true"/>
		</property>
		<!-- 
				http address
		-->
		<property name="httpAddress" type="string" length="64"/>
		<!-- 
				supervisor desc
		-->
		<property name="supervisorDesc" type="string" length="64"/>
		<!-- 
				date added
		-->
		<property name="added" type="date"/>
		<!-- 
				locale
		-->
		<many-to-one name="locale" 
			class="org.helianto.core.Locale" cascade="all">
			<column name="localeId" not-null="false"/>
		</many-to-one>
		<!-- 
				mail transport data
		-->
		<component name="mailTransportData" 
			class="org.helianto.core.MailTransportData">
			<!-- 
				mail host
			-->
			<property name="smtpHost" type="string" length="64"/>
			<!-- 
				mail user
			-->
			<property name="smtpUser" type="string" length="32"/>
			<!-- 
				mail password
			-->
			<property name="smtpPassword" type="string" length="20"/>
		</component>
		<!-- 
				mail access data
		-->
		<component name="mailAccessData" 
			class="org.helianto.core.MailAccessData">
			<!-- 
				store type
			-->
			<property name="storeType" type="string" length="12"/>
			<!-- 
				store host
			-->
			<property name="host" type="string" length="64"/>
			<!-- 
				store user
			-->
			<property name="user" type="string" length="32"/>
			<!-- 
				store password
			-->
			<property name="password" type="string" length="20"/>
		</component>
		<!-- 
				subclass to provide a default entity
		-->
		<subclass discriminator-value="D"
			name="org.helianto.core.DefaultEntity">
		<!-- 
				DEFAULT ENTITY
				============================================= 
		-->
			<meta attribute="class-description" inherit="false">
					<![CDATA[
<p>
Domain object to provide a default <code>Entity</code> where only
one (or few) entities are required.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
			</meta>
			<!-- 
					default entity
			-->
			<many-to-one name="defaultEntity" 
				class="org.helianto.core.Entity" cascade="merge">
				<column name="defaultEntity" not-null="false"/>
			</many-to-one>
			<!-- 
				priority
			-->
			<property name="priority" type="int" not-null="true"/>
		</subclass>
	</class>
</hibernate-mapping>