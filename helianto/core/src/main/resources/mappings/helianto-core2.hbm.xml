<hibernate-mapping default-lazy="false">
	<class table="core_defaultentity"
		name="org.helianto.core.DefaultEntity">
		<!-- 
				DEFAULT ENTITY
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Domain object to indicate which <code>Entity</code>
may be taken by default when required by an association.
</p>

<p>
This is usefull for environments where all domain objects may be associated
to a single <code>Entity</code>.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="int">
			<generator class="native"/>
		</id>
		<!-- 
				entity
				(note this is actually one-to-one because of unique=true)
		-->
		<many-to-one name="entity" 
			class="org.helianto.core.Entity" cascade="all">
			<meta attribute="use-in-equals">true</meta>
			<column name="entityId" unique="true"/>
		</many-to-one>
		<!-- 
				priority
		-->
		<property name="priority" type="int" not-null="true" unique="true"/>
	</class>
</hibernate-mapping>