<hibernate-mapping default-lazy="false">
	<class table="core_credential" 
		name="org.helianto.core.Credential">
		<!-- 
				CREDENTIAL
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist a credential, unique by principal.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		<!-- 
				principal
			    (also unique with entity in the sublcass)
		-->
		<property name="principal" type="string">
			<column name="principal" length="64" not-null="true" 
				unique="true"/>
		</property>
		<!-- 
				password
		-->
		<property name="password" type="string" length="20"/>
		<!-- 
				credential type: organizational email, personal email,
			    or not addressable.
		-->
		<property name="credentialType" type="char" not-null="true">
			<meta attribute="field-description" inherit="false">
				@see CredentialType
			</meta>
		</property>
		<!-- 
				notification: automatic or by request.
		-->
		<property name="notification" type="char" not-null="true">
			<meta attribute="field-description" inherit="false">
				@see NotificationType
			</meta>
		</property>
		<component  name="personalData" 
			class="org.helianto.core.PersonalData">
			<!-- 
				PERSONAL DATA
				=============================================
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist personal data.
</p>
	
@author Mauricio Fernandes de Castro
@version $Id$
				]]>
			</meta>
			<!-- 
				firstName
			-->
			<property name="firstName" type="string" length="32"/>
			<!-- 
				lastName
			-->
			<property name="lastName" type="string" length="32"/>
			<!-- 
				gender: male, female, not supplied
			-->
			<property name="gender" type="char" not-null="true">
				<meta attribute="field-description" inherit="false">
					@see Gender
				</meta>
			</property>
			<!-- 
				appellation: Mr., Mrs., etc
			-->
			<property name="appellation" type="int" not-null="true">
				<meta attribute="field-description" inherit="false">
					@see Appellation
				</meta>
			</property>
		</component>
		<!-- 
				created
		-->
		<property name="created" type="date"/>
		<!-- 
				lastModified
		-->
		<property name="lastModified" type="date"/>
		<!-- 
				expired
		-->
		<property name="expired" type="date"/>
		<!-- 
				credential state: active, suspended, cancelled
		-->
		<property name="credentialState" type="char" not-null="true">
			<meta attribute="field-description" inherit="false">
				@see CredentialState
			</meta>
		</property>
		<!--
				users
		-->
		<set name="users" inverse="true">
			<key column="credentialId"/>
			<one-to-many class="org.helianto.core.User"/>
		</set>
	</class>
</hibernate-mapping>
