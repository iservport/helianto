<hibernate-mapping default-lazy="false">
	<class table="core_partner" 
		name="org.helianto.core.Partner" 
		discriminator-value="N">
		<!-- 
				PARTNER
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist relationships between the organization and its 
partners, like customers, suppliers, banks, etc. 
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
        </meta>
		<id name="id" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		<discriminator column="role" type="char"/>
		<many-to-one name="entity" cascade="merge"
			class="org.helianto.core.Entity">
			<meta attribute="use-in-equals">true</meta>
			<column name="entityId" 
				unique-key="uniqueAlias" 
				not-null="true"/>
		</many-to-one>
		<property name="alias" type="string">
			<meta attribute="use-in-equals">true</meta>
			<column name="alias" length="20" 
				unique-key="uniqueAlias" 
				not-null="true"/>
		</property>
		<many-to-one name="related" cascade="merge"
			class="org.helianto.core.Entity">
			<column name="relId"></column>
		</many-to-one>
		<!--many-to-one name="assetAccount" 
			class="org.helainto.account.Account">
			<column name="assetId"/>
		</many-to-one>
		<many-to-one name="liabilityAccount" 
			class="org.helainto.account.Account">
			<column name="liabilityId"/>
		</many-to-one-->
		<property name="state" type="char" not-null="true"/>
		<property name="strong" type="boolean" not-null="true"/>
		<property name="relatedSince" type="date"/>
		<property name="numberAssignedRemotely" type="string" 
			length="20"/>
		<property name="importedKey" type="long"/>
		<property name="profile" type="string" length="255"/>
		<subclass name="org.helianto.core.Division" 
			discriminator-value="D">
			<!-- 
				DIVISION
				============================================= 
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist a relationship to a division. 
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
			</meta>
			<property name="divisionType" type="char" not-null="true"/>
		</subclass>
		<subclass name="org.helianto.core.Customer" 
			discriminator-value="C">
			<!-- 
				CUSTOMER
				============================================= 
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist a relationship to a customer 
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
			</meta>
			<many-to-one name="deliverTo" 
				class="org.helianto.core.Partner" 
				column="deliverId">
			</many-to-one>
		</subclass>
		<subclass name="org.helianto.core.Supplier" 
			discriminator-value="S">
			<!-- 
				SUPPLIER
				============================================= 
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist a relationship to a supplier 
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
			</meta>
			<property name="supplierAsessment" type="float"/>
			<many-to-one name="buyer" 
				class="org.helianto.core.User">
				<column name="buyerId"/>
			</many-to-one>
		</subclass>
		<subclass name="org.helianto.core.Bank" 
			discriminator-value="B">
			<!-- 
				BANK
				============================================= 
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist a relationship to a bank 
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
			</meta>
			<property name="checkFormFile" type="string" length="10"/>
		</subclass>
		<subclass name="org.helianto.core.Agent" 
			discriminator-value="B">
			<!-- 
				AGENT
				============================================= 
			-->
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
Persist a relationship to an Agent, like a sales representative. 
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
			</meta>
			
		</subclass>
	</class>
</hibernate-mapping>
