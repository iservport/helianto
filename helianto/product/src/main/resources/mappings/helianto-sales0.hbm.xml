<hibernate-mapping default-lazy="false">
		<!-- 
				PROPOSAL
				============================================= 
		-->
	<class table="sales_proposal" 
		name="org.helianto.sales.Proposal">
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A class to define a proposal.
</p>

@author Mauricio Fernandes de Castro
@version $Id: helianto-sales0.hbm.xml 3 2006-03-02 19:44:41 -0300 (Qui, 02 Mar 2006) iserv $
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		<!-- 
  				customer
		-->
		<many-to-one name="customer" 
			class="org.helianto.core.Customer" 
			column="customerId" unique-key="salesCode"/>
		<!-- 
  				product
		-->
		<many-to-one name="product" 
			class="org.helianto.process.Product" 
			column="productId"/>
		<!-- 
  				sales code
		-->
		<property name="salesCode" type="string">
			<column name="salesCode" length="24" unique-key="salesCode"/>
		</property>
		<!-- 
  				proposal state
		-->
		<property name="proposalState" type="char" not-null="true"/>
		<!-- 
  				date proposed
		-->
		<property name="dateProposed" type="date"/>
		<!-- 
  				date approved
		-->
		<property name="dateApproved" type="date"/>
	</class>
</hibernate-mapping>

