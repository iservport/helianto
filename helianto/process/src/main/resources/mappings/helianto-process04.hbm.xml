<hibernate-mapping default-lazy="false">
		<!-- 
				METHOD
				============================================= 
		-->
	<class table="process_method" 
		name="org.helianto.process.Method">
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A method is required to complete an association between
a characteristic and a specification.
</p>

@author Mauricio Fernandes de Castro
@version $Id: iservport-process0.hbm.xml,v 1.2 2006/03/13 15:29:13 iserv Exp $
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		<!-- 
  				entity
		-->
		<many-to-one name="entity" 
			class="org.helianto.core.Entity" 
			column="entityId"/>
		<!-- 
  				resource
		-->
		<many-to-one name="resource" 
			class="org.helianto.process.Resource" 
			column="resourceId"/>
		<!-- 
  				sample size
		-->
		<property name="sampleSize" type="double" not-null="true"/>
		<!-- 
  				sample frequency
		-->
		<property name="sampleFrequency" type="string" length="10"/>
		<!-- 
  				techinique
		-->
		<property name="techinique" type="string" length="32"/>
		<!-- 
  				control 
		-->
		<property name="control" type="string" length="32"/>
	</class>
</hibernate-mapping>