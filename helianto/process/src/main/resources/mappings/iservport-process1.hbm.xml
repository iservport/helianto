<hibernate-mapping default-lazy="false">
		<!-- 
				DOCUMENT
				============================================= 
		-->
	<class table="process_document" 
		name="org.helianto.process.Document" discriminator-value="0">
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A base class to any class that requires version control.
</p>

<p>
Tipical descendants are parts, processes and organizational process
documents.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		<discriminator column="type" type="int"/>
		<!-- 
  				parent entity
		-->
		<many-to-one name="entity" 
			class="org.helianto.core.Entity">
			<meta attribute="use-in-equals">true</meta>
			<column name="entityId" unique-key="entity" not-null="true"/>
		</many-to-one>
		<!-- 
  				document code
		-->
		<property name="docCode" type="string">
			<meta attribute="use-in-equals">true</meta>
			<column name="docCode" length="24" unique-key="entity" not-null="true"/>
		</property>
		<!-- 
  				document name
		-->
		<property name="docName" type="string" length="128"/>
		<!-- 
  				document url
		-->
		<property name="docUrl" type="string" length="64"/>
		<!-- 
  				children
		-->
		<list name="children" inverse="true" cascade="merge">
			<key column="id"/>
			<list-index column="sequence"/>
			<one-to-many class="org.helianto.process.Tree"/>
		</list>
		<!-- 
				PART
				============================================= 
		-->
		<subclass name="org.helianto.process.Part"
			discriminator-value="1">
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A part.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
			</meta>
			<!-- 
  				has drawing
			-->
			<property name="hasDrawing" type="boolean" not-null="true"/>
			<!-- 
  				material
			-->
			<many-to-one name="material" 
				class="org.helianto.process.Material">
				<column name="materialId"/>
			</many-to-one>
			<!-- 
				PRODUCT
				============================================= 
			-->
			<subclass name="org.helianto.process.Product"
				discriminator-value="2">
				<meta attribute="class-description" inherit="false">
					<![CDATA[
<p>
A product.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
				</meta>
				<!-- 
  				product type
				-->
				<property name="productType" type="int" not-null="true"/>
				<!-- 
  				shipping quantity
				-->
				<property name="shippingQty" type="double" not-null="true"/>
				<!-- 
  				unit
				-->
				<many-to-one name="unit" 
					class="org.helianto.process.Unit">
					<column name="unitId"/>
				</many-to-one>
			</subclass>
		</subclass>
		<!-- 
				PROCESS
				============================================= 
		-->
		<subclass name="org.helianto.process.Process" 
			discriminator-value="3">
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A process.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
			</meta>
			<!-- 
  				internal number
			-->
			<property name="internalNumber" type="long" not-null="false"/>
		</subclass>
		<!-- 
				OPERATION
				============================================= 
		-->
		<subclass name="org.helianto.process.Operation" 
			discriminator-value="4">
			<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
An operation.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
			</meta>
			<!-- 
  				operation type
			-->
			<property name="operationType" type="int" not-null="true"/>
			<!-- 
  				operation time
			-->
			<property name="operationTime" type="long" not-null="true"/>
			<!-- 
  				setups 
			-->
			<list name="setups" inverse="true" cascade="merge">
				<key column="id"/>
				<list-index column="priority"/>
				<one-to-many class="org.helianto.process.Setup"/>
			</list>
		</subclass>
	</class>
		<!-- 
				TREE
				============================================= 
		-->
	<class table="process_tree" 
		name="org.helianto.process.Tree">
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A class to define relationships between different document types.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		<!-- 
  				parent document
		-->
		<many-to-one name="parent" 
			class="org.helianto.process.Document">
			<column name="parentId" not-null="false"/>
		</many-to-one>
		<!-- 
  				child document
		-->
		<many-to-one name="child" 
			class="org.helianto.process.Document">
			<column name="childId" not-null="false"/>
		</many-to-one>
		<!-- 
  				sequence
		-->
		<property name ="sequence" type="int" not-null="true"/>
		<!-- 
  				coefficient
		-->
		<property name="coefficient" type="double"/>
		<!-- 
  				association type
		-->
		<property name="associationType" type="int" not-null="true"/>
		<!-- 
  				function
		-->
		<many-to-one name="function" 
			class="org.helianto.process.Function">
			<column name="functionId" not-null="false"/>
		</many-to-one>
	</class>
		<!-- 
				UNIT
				============================================= 
		-->
	<class table="process_unit" 
		name="org.helianto.process.Unit">
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A class to represent a unit.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="int" unsaved-value="null">
			<generator class="native"/>
		</id>
		<!-- 
  				entity
		-->
		<many-to-one name="entity" 
			class="org.helianto.core.Entity" 
			column="entityId"/>
		<!-- 
  				parent
		-->
		<many-to-one name="parent" 
			class="org.helianto.process.Unit" 
			column="parentId" not-null="false"/>
		<!-- 
  				unit code
		-->
		<property name="unitCode" type="string" length="12"/>
		<!-- 
  				unit name
		-->
		<property name="unitName" type="string" length="64"/>
	</class>
</hibernate-mapping>