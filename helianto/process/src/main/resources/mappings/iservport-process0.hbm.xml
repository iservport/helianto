<hibernate-mapping default-lazy="false">
		<!-- 
				MATERIAL
				============================================= 
		-->
	<class table="process_material" 
		name="org.helianto.process.Material">
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A class to represent a material.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		<!-- 
  				entity
		-->
		<many-to-one name="entity" 
			class="org.helianto.core.Entity">
			<column name="entityId" unique-key="internalnumber"/>
		</many-to-one>
		<!-- 
  				internal number
		-->
		<property name="internalNumber" type="long">
			<column name="internalNumber" unique-key="internalnumber"/>
		</property>
		<!-- 
  				parent
		-->
		<many-to-one name="parent" 
			class="org.helianto.process.Material" 
			column="parentId" not-null="false"/>
		<!-- 
  				unit
		-->
		<many-to-one name="materialUnit" 
			class="org.helianto.process.Unit" 
			column="materialUnitId" not-null="true"/>
		<!-- 
  				material name
		-->
		<property name="materialName" type="string" length="128"/>
	</class>
		<!-- 
				FUNCTION
				============================================= 
		-->
	<class table="process_function" 
		name="org.helianto.process.Function">
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A class to represent a function.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="int" unsaved-value="null">
			<generator class="native"/>
		</id>
		<!-- 
  				entity
		-->
		<many-to-one name="entity" 
			class="org.helianto.core.Entity" 
			column="entityId"/>
		<!-- 
  				parent
		-->
		<many-to-one name="parent" 
			class="org.helianto.process.Function" 
			column="parentId" not-null="false"/>
		<!-- 
  				function name
		-->
		<property name="functionName" type="string" length="128"/>
	</class>
		<!-- 
				PROCESS RESOURCES
				============================================= 
		-->
	<class table="process_resources" name="org.helianto.process.Resource">
		<meta attribute="class-description" inherit="false">
			<![CDATA[
<p>
A class to represent a process resource
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
		</meta>
		<!-- 
		id
		-->
		<id name="id" type="int" unsaved-value="null">
			<generator class="native"/>
		</id>
		<!-- 
		entity
		-->
		<many-to-one name="entity" class="org.helianto.core.Entity"
			unique-key="code" column="entityId" cascade="merge"/>
		<!-- 
		parent
		-->
		<many-to-one name="parent"
			class="org.helianto.process.Resource" column="parentId"
			not-null="false" cascade="merge"/>
		<!-- 
		resource code
		-->
		<property name="resourceCode" type="string" length="6"
			unique-key="code"/>
		<!-- 
		resource name
		-->
		<property name="resourceName" type="string" length="128"/>
		<!-- 
		resource type
		-->
		<property name="resourceType" type="int" not-null="true"/>
	</class>
</hibernate-mapping>