<hibernate-mapping default-lazy="false">
	<!-- 
		DOCUMENT VERSION
		============================================= 
	-->
	<class table="process_version"
		name="org.helianto.process.DocumentVersion">
		<meta attribute="class-description" inherit="false">
			<![CDATA[
<p>
A class to represent document versions.
</p>

@author Mauricio Fernandes de Castro
@version $Id: iservport-process0.hbm.xml,v 1.2 2006/03/13 15:29:13 iserv Exp $
				]]>
		</meta>
		<!-- 
			id
		-->
		<id name="id" type="long">
			<column name="id" unique-key="versionNumber"/>
			<generator class="native" />
		</id>
		<!-- 
			natural id
		-->
		<natural-id mutable="false">
			<!-- 
				release
			-->
			<many-to-one name="Release"
				class="org.helianto.process.Entity">
				<meta attribute="use-in-equals">true</meta>
				<column name="releaseId" />
			</many-to-one>
			<!-- 
				document
			-->
			<many-to-one name="document"
				class="org.helianto.process.Document">
				<meta attribute="use-in-equals">true</meta>
				<column name="documentId" />
			</many-to-one>
		</natural-id>
		<!-- 
			major revision number
		-->
		<property name="majorNumber" type="int">
			<column name="majorNumber" unique-key="versionNumber"
				not-null="true" />
		</property>
		<!-- 
			minor revision number
		-->
		<property name="minorNumber" type="int">
			<column name="minorNumber" unique-key="versionNumber"
				not-null="true" />
		</property>
		<!-- 
			release action
		-->
		<property name="releaseAction" type="int" not-null="true" />
		<!-- 
			activity code
		-->
		<property name="activityCode" type="char" not-null="true" />
		<!-- 
			change summary
		-->
		<property name="changeSummary" type="string" length="256" />
	</class>
</hibernate-mapping>