<beans>
	<!--
			Resource creator implementation	
	-->
	<bean id="resourceCreator" 
		class="org.helianto.process.creation.ResourceCreatorImpl"/>
	<!--
			resource dao	
	-->
	<bean id="resourceDao" class="org.helianto.process.hibernate.ResourceDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			Resource service bean	
	-->
	<bean id="resourceMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="resourceTarget"
				class="org.helianto.process.service.ResourceMgrImpl">
				<property name="resourceCreator" ref="resourceCreator"/>
				<property name="resourceDao" ref="resourceDao"/>
				<property name="partnerDao" ref="partnerDao"/>
			</bean>
		</property>
	</bean>
	
	<!--
			Process creator implementation	
	-->
	<bean id="processCreator" 
		class="org.helianto.process.creation.ProcessCreatorImpl"/>
	<!--
			process dao	
	-->
	<bean id="processDao" class="org.helianto.process.hibernate.ProcessDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			process service bean	
	-->
	<bean id="processMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="processTarget"
				class="org.helianto.process.service.ProcessMgrImpl">
				<property name="processCreator" ref="processCreator"/>
				<property name="processDao" ref="processDao"/>
			</bean>
		</property>
	</bean>
	
</beans>
