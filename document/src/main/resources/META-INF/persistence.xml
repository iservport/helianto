<persistence xmlns="http://java.sun.com/xml/ns/persistence"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
		version="1.0">

	<persistence-unit name="HeliantoCore" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>org.helianto.document.Document</class>
		<class>org.helianto.document.DocumentTag</class>
		<class>org.helianto.document.DocumentAssociation</class>
	</persistence-unit>
	
</persistence>
