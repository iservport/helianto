<hibernate-mapping default-lazy="false">
	<class table="core_userrole" 
		name="org.helianto.core.UserRole">
		<!-- 
				USER ROLE
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
			<![CDATA[
<p>
Represent roles an <code>User</code> can play.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="long">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
					user
			-->
			<many-to-one name="userGroup"
				class="org.helianto.core.UserGroup" cascade="save-update,persist,merge">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="userId"/>
			</many-to-one>
			<!-- 
					service
			-->
			<many-to-one name="service"
				class="org.helianto.core.Service" cascade="save-update,persist,merge">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="serviceId"/>
			</many-to-one>
			<!-- 
					service extension 
			-->
			<property name="serviceExtension" type="string">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="serviceExtension"	length="8"/>
			</property>
		</natural-id>
	</class>
</hibernate-mapping>