<hibernate-mapping default-lazy="false">
	<class table="core_operator_m3" 
		name="org.helianto.core.Operator">
		<!-- 
				OPERATOR
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A domain object to represent a system operator, unique by a short name.
</p>

<p>
Operators can be created to represent a geographical
limit, bound to a java <code>Locale</code>, or according to any territory
arrangement.
</p>

<p>
At least one default (root) operatot must be defined per installation.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="int">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
					operator name (unique)
			-->
			<property name="operatorName" type="string">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="operatorName" length="20"/>
			</property>
		</natural-id>
		<!-- 
				parent
		-->
		<many-to-one name="parent" 
			class="org.helianto.core.Operator">
			<column name="parentId" not-null="false"/>
		</many-to-one>
		<!-- 
				locale
		-->
		<property name="locale" type="locale"/>
		<!-- 
				server mode: local, enterprise
		-->
		<property name="operationMode" type="char" >
			<column name="operationMode" not-null="true" default="'L'"/>
		</property>
		<!-- 
				operator host address
		-->
		<property name="operatorHostAddress" type="string" length="64"/>
		<!-- 
				operator source mail address
		-->
		<property name="operatorSourceMailAddress" type="string" length="64"/>
		<!-- 
				default encoding
		-->
		<property name="defaultEncoding" type="string" length="20"/>
		<!-- 
				preferred date format
		-->
		<property name="preferredDateFormat" type="string" length="12">
			<column name="preferredDateFormat" default="yyyy/MM/dd "/>
		</property>
		<!-- 
				preferred time format
		-->
		<property name="preferredTimeFormat" type="string" length="12">
			<column name="preferredTimeFormat" default="HH:mm "/>
		</property>
		<!-- 
				RFC 822 time zone
		-->
		<property name="rfc822TimeZone" type="string" length="5">
			<column name="rfc822TimeZone" default="-0300"/>
		</property>
	</class>
</hibernate-mapping>