<hibernate-mapping default-lazy="false">
	<class table="core_userassoc"
		name="org.helianto.core.UserAssociation">
		<!-- 
				USER ASSOCIATION
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A class to hold user and user groups associations.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" column="associationId" type="long">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
					parent user
			-->
			<many-to-one name="parent" 
				class="org.helianto.core.UserGroup" cascade="save-update,merge"
				insert="true">
				<meta attribute="use-in-equals">true</meta>
				<column name="parentId"/>
			</many-to-one>
			<!-- 
					child user
			-->
			<many-to-one name="child" 
				class="org.helianto.core.UserGroup" cascade="save-update,merge"
				insert="true">
				<meta attribute="use-in-equals">true</meta>
				<column name="childId"/>
			</many-to-one>
		</natural-id>
	</class>
</hibernate-mapping>