<hibernate-mapping default-lazy="false">
	<!-- 
		RESOURCE PARAMETER VALUE
		============================================= 
	-->
	<class table="process_resourceparamvalue"
		name="org.helianto.process.ResourceParameterValue">
		<meta attribute="class-description" inherit="false">
			<![CDATA[
<p>
A class to represent parameters values.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
			id
		-->
		<id name="id" type="int">
			<column name="id"/>
			<generator class="native" />
		</id>
		<!-- 
			natural id
		-->
		<natural-id mutable="false">
			<!-- 
				resource or resource group
			-->
			<many-to-one name="resource" cascade="save-update,merge"
				class="org.helianto.process.ResourceGroup">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="resourceId" />
			</many-to-one>
			<!-- 
				code
			-->
			<many-to-one name="parameter" cascade="save-update,merge"
				class="org.helianto.process.ResourceParameter">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="parameterId" />
			</many-to-one>
		</natural-id>
		<!-- 
			parameter value
		-->
		<property name="parameterNumericValue" type="big_decimal"/>
		<!-- 
			parameter value
		-->
		<property name="parameterTextValue" type="string" length="32" />
		<!-- 
			suppress
		-->
		<property name="suppressed" type="boolean" >
			<column name="suppressed" not-null="true" default="0"/>
		</property>
	</class>
</hibernate-mapping>