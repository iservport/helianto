<hibernate-mapping default-lazy="false">
	<class table="core_server_m3" 
		name="org.helianto.core.Server">
		<!-- 
				SERVER
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A domain object to represent available servers to an <code>Operator</code>.
</p>

<p>
Servers are the source for comunication between the <code>Operator</code> controlled entities and
recipients (e-mail, etc). They hold the information necessary to connect to 
external hosts. 
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="int">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
					operator
			-->
			<many-to-one name="operator" cascade="save-update,merge"
				class="org.helianto.core.Operator">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="operatorId"/>
			</many-to-one>
			<!-- 
					server name
			-->
			<property name="serverName" type="string">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="serverName" length="20"/>
			</property>
		</natural-id>
		<!-- 
				server host address
		-->
		<property name="serverHostAddress" type="string" length="64"/>
		<!-- 
				server desc
		-->
		<property name="serverDesc" type="string" length="64"/>
		<!-- 
				server type: http, mail post office, mail transport, etc
		-->
		<property name="serverType" type="char" >
			<column name="serverType" not-null="true" default="'P'"/>
		</property>
		<!-- 
			priority
		-->
		<property name="priority" type="byte" >
			<column name="priority" not-null="true" default="0"/>
		</property>
		<!-- 
				server state: ACTIVE, INACTIVE
		-->
		<property name="serverState" type="char" >
			<column name="serverState" not-null="true" default="'L'"/>
		</property>
		<!-- 
			required encription
		-->
		<property name="requiredEncription" type="byte" >
			<column name="requiredEncription" not-null="true" default="0"/>
		</property>
		<!-- 
				credential
		-->
		<many-to-one name="credential" cascade="save-update,merge"
			class="org.helianto.core.Credential">
			<meta attribute="use-in-equals">true</meta>
			<meta attribute="use-in-tostring">true</meta>
			<column name="credentialId"/>
		</many-to-one>
	</class>
</hibernate-mapping>