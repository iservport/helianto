<hibernate-mapping default-lazy="false">
	<class table="core_partner" 
		name="org.helianto.core.Partner">
		<!-- 
				PARTNER
				============================================= 
		-->
		<meta attribute="class-description">
				<![CDATA[
<p>
Top of the <code>Partner</code> hierarchy that represents,
customers, suppliers, banks, etc. 
</p>

@author Mauricio Fernandes de Castro
				]]>
        </meta>
		<!-- 
  				id
		-->
		<id name="id" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
	  				partner data
			-->
			<many-to-one name="partnerData" cascade="save-update,persist,merge"
				class="org.helianto.core.PartnerData">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="partnerDataId"/>
			</many-to-one>
			<!-- 
	  				sequence
			-->
			<property name="sequence" type="byte">
				<column name="sequence" not-null="true"/>
			</property>
		</natural-id>
		<!-- 
  				account
		-->
		<!--many-to-one name="account" 
			class="org.helainto.account.Account">
			<column name="accountId"/>
		</many-to-one-->
		<!-- 
  				priority
		-->
		<property name="priority" type="char">
			<column name="priority" not-null="true" default="'z'"/>
		</property>
		<!-- 
  				partner state
		-->
		<property name="partnerState" type="char">
			<column name="partnerState" not-null="true" default="'A'"/>
		</property>
		<!-- 
  				profile
		-->
		<property name="profile" type="string" length="255"/>
	</class>
</hibernate-mapping>
