<hibernate-mapping default-lazy="false">
	<class table="core_partnerdata" 
		name="org.helianto.core.PartnerData">
		<!-- 
			PARTNER DATA
			============================================= 
		-->
		<meta attribute="class-description">
				<![CDATA[
<p>
Represents the relationship between the organization and other entities.  
</p>

@author Mauricio Fernandes de Castro
				]]>
        </meta>
		<!-- 
  				id
		-->
		<id name="id" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
	  				entity
			-->
			<many-to-one name="entity" cascade="save-update,persist,merge"
				class="org.helianto.core.Entity">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="entityId"/>
			</many-to-one>
			<!-- 
	  				alias
			-->
			<property name="alias" type="string">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="alias" length="20"/>
			</property>
		</natural-id>
		<!-- 
			province
		-->
		<many-to-one name="province" cascade="save-update,persist,merge"
			class="org.helianto.core.Province">
			<column name="provinceId"/>
		</many-to-one>
		<!-- 
			address 1
		-->
		<property name="address1" type="string" length="64"/>
		<!-- 
			address 2
		-->
		<property name="address2" type="string" length="32"/>
		<!-- 
			address 2
		-->
		<property name="address3" type="string" length="20"/>
		<!-- 
			city name
		-->
		<property name="cityName" type="string" length="32"/>
		<!-- 
			postal code
		-->
		<property name="postalCode" type="string" length="10"/>
		<!-- 
			post office box
		-->
		<property name="postOfficeBox" type="string" length="10"/>
		<!--
				partners
		-->
		<set name="partners" inverse="true" cascade="save-update,persist,merge">
			<key column="partnerId"/>
			<one-to-many class="org.helianto.core.Partner"/>
		</set>
	</class>
</hibernate-mapping>
