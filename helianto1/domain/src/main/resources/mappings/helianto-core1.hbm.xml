<hibernate-mapping default-lazy="false">
	<class table="core_internalenum_m3"
		name="org.helianto.core.InternalEnumerator">
		<!-- 
				INTERNAL ENUMERATOR
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A class to hold last value for internal number lists.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="int">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
					entity
			-->
			<many-to-one name="entity" 
				class="org.helianto.core.Entity" cascade="merge">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="entityId"/>
			</many-to-one>
			<!-- 
					type name
			-->
			<property name="typeName" type="string">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="typeName" length="12"/>
			</property>
		</natural-id>
		<!-- 
				last number
		-->
		<property name="lastNumber" type="long" not-null="true"/>
	</class>
</hibernate-mapping>