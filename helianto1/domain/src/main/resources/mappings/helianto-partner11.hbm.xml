<hibernate-mapping default-lazy="false">
	<class table="core_partnerkey" 
	    name="org.helianto.core.PartnerKey">
		<!-- 
			PARTNER KEY
			============================================= 
		-->
		<meta attribute="class-description">
			<![CDATA[
<p>
Represents different key values for each <code>PartnerRole</code>.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
				id
		-->
		<id name="id" type="long">
			<generator class="native" />
		</id>
		<natural-id>
			<!-- 
				partner
			-->
			<many-to-one name="partner"
				class="org.helianto.core.Partner">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="partnerId"/>
			</many-to-one>
			<!-- 
				key type
			-->
			<many-to-one name="keyType"
				class="org.helianto.core.KeyType">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="keyTypeId"/>
			</many-to-one>
		</natural-id>
		<!-- 
			key value
		-->
		<property name="keyValue" type="string" length="20"/>
	</class>
</hibernate-mapping>
