<hibernate-mapping default-lazy="false">
	<class table="purchase_order" 
		name="org.helianto.purchase.Order">
		<!-- 
				PURCHASE ORDER
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
				<![CDATA[
<p>
A domain object to represent a purchase order.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="int">
			<generator class="native"/>
		</id>
		<!-- 
				entity
		-->
		<many-to-one name="entity" cascade="save-update,persist,merge"
			class="org.helianto.core.Entity">
			<meta attribute="use-in-equals">true</meta>
			<column name="entityId"/>
		</many-to-one>
		<!-- 
				internal number
		-->
		<property name="internalNumber" type="int">
			<meta attribute="use-in-equals">true</meta>
		</property>
		<!-- 
				partner
		-->
		<many-to-one name="partner" 
			class="org.helianto.core.Partner">
			<column name="partnerId"/>
		</many-to-one>
		<!-- 
				date issued
		-->
		<property name="dateIssued" type="date"/>
		<!-- 
				order value
		-->
		<property name="orderValue" type="big_decimal"/>
	</class>
</hibernate-mapping>