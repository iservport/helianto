<hibernate-mapping default-lazy="false">
	<class table="core_sharedentity_m3" 
		name="org.helianto.core.SharedEntity">
		<!-- 
			SHARED ENTITY
			============================================= 
		-->
		<meta attribute="class-description">
				<![CDATA[
<p>
Represents the relationship between the organization and other entities.  
</p>

@author Mauricio Fernandes de Castro
				]]>
        </meta>
		<!-- 
  				id
		-->
		<id name="id" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
	  				shared entity
			-->
			<many-to-one name="sharedEntity" cascade="save-update,merge"
				class="org.helianto.core.Entity">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="sharedEntityId"/>
			</many-to-one>
			<!-- 
	  				partner data
			-->
			<many-to-one name="partnerData" cascade="save-update,merge"
				class="org.helianto.core.PartnerData">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="partnerDataId"/>
			</many-to-one>
		</natural-id>
		<!-- 
  				share mode (restricted, full)
		-->
		<property name="shareMode" type="char" not-null="true"/>
		<!-- 
  				shared since
		-->
		<property name="sharedSince" type="date"/>
	</class>
</hibernate-mapping>
