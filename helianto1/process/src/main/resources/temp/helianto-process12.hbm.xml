			<!-- 
				PRODUCT
				============================================= 
			-->
			<subclass name="org.helianto.process.Product"
				discriminator-value="2">
				<meta attribute="class-description" inherit="false">
					<![CDATA[
<p>
A product.
</p>

@author Mauricio Fernandes de Castro
@version $Id$
				]]>
				</meta>
				<!-- 
  				product type
				-->
				<property name="productType" type="int" not-null="true"/>
				<!-- 
  				shipping quantity
				-->
				<property name="shippingQty" type="double" not-null="true"/>
				<!-- 
  				unit
				-->
				<many-to-one name="unit" 
					class="org.helianto.process.Unit">
					<column name="unitId"/>
				</many-to-one>
			</subclass>
