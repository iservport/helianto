	<!--
			dao implementation	
	-->
	<bean id="documentDao" 
		class="org.helianto.process.orm.DocumentDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<bean id="documentAssociationDao" 
		class="org.helianto.process.orm.DocumentAssociationDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	
	<bean id="materialDao" 
	    class="org.helianto.process.hibernate.MaterialDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<bean id="resourceDao" 
	    class="org.helianto.process.hibernate.ResourceDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			Resource service bean	
	-->
	<bean id="resourceMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="resourceTarget"
				class="org.helianto.process.service.ResourceMgrImpl">
			</bean>
		</property>
	</bean>
	<!--
		Resource property editor registrar
	-->
	<bean id="resourcePropertyEditorRegistrar" 
	    class="org.helianto.process.validation.ResourcePropertyEditorRegistrar">
	    <property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
		Document property editor registrar
	-->
	<bean id="documentPropertyEditorRegistrar" 
	    class="org.helianto.process.validation.DocumentPropertyEditorRegistrar">
	    <property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			process dao	
	-->
	<bean id="processDao" class="org.helianto.process.hibernate.ProcessDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			process service bean	
	-->
	<bean id="processMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="processTarget"
				class="org.helianto.process.service.ProcessMgrImpl">
			</bean>
		</property>
	</bean>
	
</beans>
