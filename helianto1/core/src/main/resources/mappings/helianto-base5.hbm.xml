<hibernate-mapping default-lazy="false">
	<class table="core_service" 
		name="org.helianto.core.Service">
		<!-- 
				SERVICE
				============================================= 
		-->
		<meta attribute="class-description" inherit="false">
			<![CDATA[
<p>
Provides distinction among different services available to 
each <code>Entity</code>.
</p>

@author Mauricio Fernandes de Castro
				]]>
		</meta>
		<!-- 
  				id
		-->
		<id name="id" type="int">
			<generator class="native"/>
		</id>
		<natural-id>
			<!-- 
				operator
			-->
			<many-to-one name="operator" cascade="save-update,persist,merge"
				class="org.helianto.core.Operator">
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="operatorId"/>
			</many-to-one>
			<!-- 
					service name 
			-->
			<property name="serviceName" type="string" >
				<meta attribute="use-in-equals">true</meta>
				<meta attribute="use-in-tostring">true</meta>
				<column name="serviceName" length="12"/>
			</property>
		</natural-id>
	</class>
</hibernate-mapping>