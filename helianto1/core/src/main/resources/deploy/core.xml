<beans>

	<!--
			imports 	
	-->
	<import resource="classpath:/deploy/dataSource.xml"/>
	<import resource="classpath:/deploy/sessionFactory.xml"/>
	<import resource="classpath:/deploy/transaction.xml"/>
	<import resource="classpath:/deploy/support.xml"/>
	<!--
			Operator dao implementation	
	-->
	<bean id="operatorDao" 
		class="org.helianto.core.hibernate.OperatorDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			Authentication dao implementation	
	-->
	<bean id="authenticationDao" 
		class="org.helianto.core.hibernate.AuthenticationDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			Authorization dao implementation	
	-->
	<bean id="authorizationDao" 
		class="org.helianto.core.hibernate.AuthorizationDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			Entity dao implementation	
	-->
	<bean id="entityDao" 
		class="org.helianto.core.hibernate.EntityDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			User service bean	
	-->
	<bean id="userMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="userTarget"
				class="org.helianto.core.service.UserMgrImpl">
				<property name="authenticationDao" ref="authenticationDao"/>
				<property name="authorizationDao" ref="authorizationDao"/>
			</bean>
		</property>
	</bean>
	<!--
			Partner dao implementation	
	-->
	<bean id="partnerDao" 
		class="org.helianto.core.hibernate.PartnerDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			Partner service bean	
	-->
	<bean id="partnerMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="partnerTarget"
				class="org.helianto.core.service.PartnerMgrImpl">
				<property name="partnerDao" ref="partnerDao"/>
			</bean>
		</property>
	</bean>
	<!--
			Authentication property editor registrar bean	
	-->
	<bean id="authenticationPropertyEditorRegistrar" 
		class="org.helianto.core.validate.AuthenticationPropertyEditorRegistrar">
	    <property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	
</beans>
