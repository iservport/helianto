<beans default-init-method="init">

	<!--
			Authorization dao implementation	
	-->
	<bean id="authorizationDao" 
		class="org.helianto.core.hibernate.AuthorizationDaoImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	<!--
			Server service bean	
	-->
	<bean id="serverMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="serverTarget"
				class="org.helianto.core.service.ServerMgrImpl">
				<property name="operatorDao" ref="operatorDao"/>
				<property name="entityDao" ref="entityDao"/>
				<property name="serviceDao" ref="serviceDao"/>
				<property name="userRoleDao" ref="userRoleDao"/>
				<property name="identityDao" ref="identityDao"/>
				<property name="userGroupDao" ref="userGroupDao"/>
				<property name="userAssociationDao" ref="userAssociationDao"/>
				<property name="userDao" ref="userDao"/>
				<property name="configurableMailSenderFactory" ref="configurableMailSenderFactory"/>
				<property name="mailMessageComposer" ref="basicMailMessageComposer"/>
			</bean>
		</property>
	</bean>
	<!--
			User service bean	
	-->
	<bean id="userMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="userTarget"
				class="org.helianto.core.service.UserMgrImpl">
				<property name="identityDao" ref="identityDao"/>
				<property name="identitySelectionStrategy" ref="defaultIdentitySelectionStrategy"/>
				<property name="credentialDao" ref="credentialDao"/>
				<property name="userGroupDao" ref="userGroupDao"/>
				<property name="authorizationDao" ref="authorizationDao"/>
				<property name="internalEnumeratorDao" ref="internalEnumeratorDao"/>
			</bean>
		</property>
	</bean>
	<!-- 
			Authentication property editor registrar bean	
	-->
	<bean id="authenticationPropertyEditorRegistrar" 
		class="org.helianto.core.validation.AuthenticationPropertyEditorRegistrar">
	    <property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	
</beans>
