	<!--
			selection strategies	
	-->
	<bean id="identitySelectionStrategy" 
		class="org.helianto.core.hibernate.DefaultIdentitySelectionStrategy"/>
	<bean id="userSelectionStrategy" 
		class="org.helianto.core.orm.DefaultUserSelectionStrategy"/>
	<bean id="categorySelectionStrategy" 
		class="org.helianto.core.orm.DefaultCategorySelectionStrategy"/>
	<bean id="unitSelectionStrategy" 
		class="org.helianto.core.orm.DefaultUnitSelectionStrategy"/>
	
	<!--
			principal generation strategy	
	-->
	<bean id="principalGenerationStrategy" 
		class="org.helianto.core.service.DefaultPrincipalGenerationStrategy"/>
	
	<!--
			User service bean	
	-->
	<bean id="userMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="userTarget"
				class="org.helianto.core.service.UserMgrImpl">
			</bean>
		</property>
	</bean>
	<!--
			Server service bean	
	-->
	<bean id="serverMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="serverTarget"
				class="org.helianto.core.service.ServerMgrImpl">
			</bean>
		</property>
	</bean>
	<!--
			Category service bean	
	-->
	<bean id="categoryMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="categoryTarget"
				class="org.helianto.core.service.CategoryMgrImpl">
			</bean>
		</property>
	</bean>
	<!--
			Unit service bean	
	-->
	<bean id="unitMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="unitTarget"
				class="org.helianto.core.service.UnitMgrImpl">
			</bean>
		</property>
	</bean>

	<!--
			Unit service bean	
	-->
	<bean id="sequenceMgr" 
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		parent="mgrTemplate">
		<property name="target">
			<bean id="sequenceTarget"
				class="org.helianto.core.service.SequenceMgrImpl">
			</bean>
		</property>
	</bean>

	<!-- 
			Authentication property editor registrar bean	
	-->
	<bean id="authenticationPropertyEditorRegistrar" 
		class="org.helianto.core.validation.AuthenticationPropertyEditorRegistrar">
	    <property name="hibernateTemplate" ref="hibernateTemplate"/>
	</bean>
	
	<bean id="identityPropertyEditor" 
		class="org.helianto.core.validation.IdentityPropertyEditor"/>
		
	<bean id="entityPropertyEditor" 
		class="org.helianto.core.validation.EntityPropertyEditor"/>

	<bean id="categoryPropertyEditor" 
		class="org.helianto.core.validation.CategoryPropertyEditor"/>

	<bean id="unitPropertyEditor" 
		class="org.helianto.core.validation.UnitPropertyEditor"/>

</beans>
