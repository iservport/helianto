<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
              http://www.springframework.org/schema/webflow
              http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<!-- start-actions>
		<action bean="installAction" method="setupForm" />
	</start-actions-->

	<start-state idref="login.view" />

    <view-state id="login.view" view="login">
		<transition on="configuration" to="configuration.subflow"/>
		<transition on="changePassword" to="changePassword.subflow"/>
		<transition on="enter" to="end"/>
    </view-state>

    <subflow-state id="configuration.subflow" flow="configuration">
		<transition on="end" to="login.view"/>
    </subflow-state>
    
    <subflow-state id="changePassword.subflow" flow="changePassword">
		<transition on="end" to="login.view"/>
    </subflow-state>
    
	<end-state id="end" />
	
</flow>

