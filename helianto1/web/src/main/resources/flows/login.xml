<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
              http://www.springframework.org/schema/webflow
              http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-actions>
		<!-- create the backing form object and initialize a empty errors collection -->
		<action bean="installAction" method="setupForm" />
	</start-actions>

	<start-state idref="ifNew" />

    <action-state id="ifNew">
    	<action bean="installAction"/>
		<transition on="no" to="login.view"/>
		<transition on="yes" to="configuration.subflow"/>
    </action-state>

    <subflow-state id="configuration.subflow" flow="configuration">
		<transition on="end" to="login.view"/>
    </subflow-state>
    
    <view-state id="login.view" view="login">
		<transition on="enter" to="end"/>
    </view-state>

	<end-state id="end" />
	
</flow>

