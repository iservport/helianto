<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="ifNew">

    <action-state id="ifNew">
    	<action bean="installAction"/>
		<transition on="no" to="login.view"/>
		<transition on="yes" to="configuration.subflow"/>
    </action-state>

    <subflow-state id="configuration.subflow" flow="configuration">
		<transition on="end" to="end"/>
    </subflow-state>
    
    <view-state id="login.view" view="login">
		<transition on="enter" to="end"/>
    </view-state>

	<end-state id="end" />
	
</flow>

