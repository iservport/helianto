<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
              http://www.springframework.org/schema/webflow
              http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-actions>
		<action bean="credentialAction" method="setupForm" />
	</start-actions>

	<start-state idref="changePassword.view" />

    <view-state id="changePassword.view" view="changePassword">
		<transition on="verifyPassword" to="verifyPassword"/>
		<transition on="cancel" to="end"/>
    </view-state>

    <action-state id="verifyPassword">
    	<action bean="credentialAction"/>
		<transition on="success" to="writePassword"/>
		<transition on="error" to="changePassword.view"/>
    </action-state>

    <action-state id="writePassword">
    	<action bean="credentialAction"/>
		<transition on="success" to="end"/>
		<transition on="error" to="changePassword.view"/>
    </action-state>

	<end-state id="end" />
	
</flow>

