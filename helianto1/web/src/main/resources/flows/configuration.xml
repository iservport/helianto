<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
              http://www.springframework.org/schema/webflow
              http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-actions>
		<!-- create the backing form object and initialize a empty errors collection -->
		<action bean="installAction" method="setupForm" />
	</start-actions>

	<start-state idref="info.view" />

    <view-state id="info.view" view="configuration/info">
		<transition on="next" to="identity.subflow"/>
    </view-state>

    <subflow-state id="identity.subflow" flow="identity">
    	<attribute-mapper>
    		<output-mapper>
    			<mapping source="identity" target="requestScope.identity"/>
    		</output-mapper>
    	</attribute-mapper>
		<transition on="end" to="createManager"/>
    </subflow-state>
    
    <action-state id="createManager">
    	<action bean="installAction"/>
		<transition on="success" to="rename.view"/>
    </action-state>

    <view-state id="rename.view" view="configuration/rename">
		<transition on="next" to="persistManager"/>
    </view-state>

    <action-state id="persistManager">
    	<entry-actions>
	    	<action bean="installAction" method="bind"/>
    	</entry-actions>
    	<action bean="installAction"/>
		<transition on="success" to="end"/>
    </action-state>

	<end-state id="end" />
	
</flow>

