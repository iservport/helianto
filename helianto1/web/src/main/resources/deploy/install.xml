<beans default-init-method="init">
	<!-- 
		contituation repository
	
    <bean id="flowExecutor" class="org.springframework.webflow.executor.FlowExecutorImpl">
        <constructor-arg ref="repositoryFactory"/>
    </bean>
    <bean id="repositoryFactory" class="org.springframework.webflow.execution.repository.continuation.ContinuationFlowExecutionRepositoryFactory">
        <constructor-arg ref="flowRegistry"/>
    </bean-->
    
    <!-- Launches new flow executions and resumes existing executions: Spring 1.2 config version -->
        <bean id="flowExecutor" class="org.springframework.webflow.config.FlowExecutorFactoryBean">
            <property name="definitionLocator" ref="flowRegistry"/>
            <property name="executionAttributes">
                <map>
                    <entry key="alwaysRedirectOnPause">
                        <value type="java.lang.Boolean">false</value>
                    </entry>
                </map>
            </property>
            <property name="repositoryType" value="CONTINUATION"/>
        </bean>
        
        <!-- Creates the registry of flow definitions for this application: Spring 1.2 config version 
        <bean id="flowRegistry"
           class="org.springframework.webflow.engine.builder.xml.XmlFlowRegistryFactoryBean">
            <property name="flowLocations">
                <list>
                    <value>/WEB-INF/flows/**/*-flow.xml</value>
                </list>
            </property>
        </bean-->
    <!--
        admin flow controller
    -->
	<!--
		identity action
	-->
	<bean name="installAction"
		class="org.helianto.web.controller.InstallFormAction">
		<property name="formObjectName" 
			value="userForm" />
		<property name="formObjectClass" 
			value="org.helianto.web.view.UserForm" />
		<property name="propertyEditorRegistrar" 
			ref="authenticationPropertyEditorRegistrar"/>
		<property name="serverMgr" 
			ref="serverMgr"/>
		<property name="userMgr" 
			ref="userMgr"/>
	</bean>
	<!--
		identity action
	-->
	<bean name="identityAction"
		class="org.helianto.web.controller.IdentityFormAction">
		<property name="formObjectName" 
			value="identityForm" />
		<property name="formObjectClass" 
			value="org.helianto.web.view.IdentityForm" />
		<property name="propertyEditorRegistrar" 
			ref="authenticationPropertyEditorRegistrar"/>
		<property name="serverMgr" 
			ref="serverMgr"/>
		<property name="securityMgr" 
			ref="securityMgr"/>
	</bean>
</beans>
