<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee web-app_2_4.xsd" 
	version="2.4">
	<display-name>helianto-admin</display-name>
	
    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>helianto.root</param-value>
    </context-param>
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/classes/log4j.xml</param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:/META-INF/spring/dataSource.xml
            classpath:/META-INF/spring/sessionFactory.xml
            classpath:/META-INF/spring/transaction.xml
            classpath:/META-INF/spring/support.xml
            classpath:/META-INF/spring/core-context.xml
            classpath:/META-INF/spring/message-context.xml
            classpath:/META-INF/spring/security.xml
            classpath:/META-INF/spring/freemarker.xml
	        classpath:/META-INF/spring/webflow.xml
	        /WEB-INF/helianto-app.xml

        </param-value>
    </context-param>
    <listener>
        <listener-class>
        org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    <listener>
        <listener-class>
        org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
	<listener>
	  <listener-class>
	  org.springframework.security.ui.session.HttpSessionEventPublisher</listener-class>
	</listener>
	<!--
			Dispatcher Servlet
	-->
	<servlet>
		<servlet-name>helianto</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>helianto</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	<!--
			Open session in view filter
	-->
	<filter>
	    <filter-name>hibernateFilter</filter-name>               
	<filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
	</filter>
    <filter-mapping>
      <filter-name>hibernateFilter</filter-name>
      <url-pattern>*.htm</url-pattern>
    </filter-mapping>
	<!--
			Spring security filter
	- please, uncomment to enable security management
	<filter>
	  <filter-name>springSecurityFilterChain</filter-name>
	  <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
	  <filter-name>springSecurityFilterChain</filter-name>
	  <url-pattern>/*</url-pattern>
	</filter-mapping>
	-->
	<!--
			Startup and finish
	-->
    <welcome-file-list>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>
	<error-page>
		<error-code>403</error-code>
		<location>/logoff.htm</location>
	</error-page>

</web-app>