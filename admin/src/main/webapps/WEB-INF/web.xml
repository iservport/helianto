<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee web-app_2_4.xsd" 
	version="2.4">
	<display-name>helianto-admin</display-name>
	
    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>admin.root</param-value>
    </context-param>
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/classes/log4j.xml</param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath*:/META-INF/spring/dataSource.xml
            classpath*:/META-INF/spring/sessionFactory.xml
            classpath*:/META-INF/spring/transaction.xml
            classpath*:/META-INF/spring/support.xml
            classpath*:/META-INF/spring/core-context.xml
            classpath*:/META-INF/spring/message-context.xml
            classpath*:/META-INF/spring/partner-context.xml
            classpath*:/META-INF/spring/process-context.xml
            classpath*:/META-INF/spring/freemarker.xml
	        classpath*:/META-INF/spring/webflow.xml
            classpath:/META-INF/spring/*.xml
        </param-value>
    </context-param>
    <listener>
        <listener-class>
        org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    <listener>
        <listener-class>
        org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
	<listener>
	  <listener-class>
	  org.springframework.security.ui.session.HttpSessionEventPublisher</listener-class>
	</listener>
	<!--
			Dispatcher Servlet
	-->
	<servlet>
		<servlet-name>admin</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>admin</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	<!--
			Startup and finish
	-->
	<error-page>
		<error-code>403</error-code>
		<location>/logoff.htm</location>
	</error-page>

</web-app>