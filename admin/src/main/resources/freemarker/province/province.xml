<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
              http://www.springframework.org/schema/webflow
              http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<input-mapper>
		<input-attribute name="operator" scope="flow"/>
	</input-mapper>
	
	<start-state idref="preProcess" />
	
	<action-state id="preProcess">
		<action bean="provinceFilterAction" method="preProcess"/>
		<transition to="provinceSelection.view">
			<set attribute="assign"    value="'province/assign'"      scope="flow"/>
		</transition>
	</action-state>
	
	<!-- 
	 ! province 
	 ! SELECTION VIEW
	 !-->
	<view-state id="provinceSelection.view" view="frame">
		<!-- 
		 ! before selection
		 -->
        <render-actions>
            <action bean="provinceFilterAction" method="applyFilter"/>
			<set attribute="sidenav"   value="'province/selection_nav'"     scope="flash"/>
			<set attribute="sidebar"   value="'province/selection_filter'"  scope="flash"/>
			<set attribute="template"  value="'province/selection'"         scope="flash"/>
        </render-actions>
		<!-- 
		 ! local transitions
		 -->
		<transition on="createTarget"  to="provinceEdit.view">
			<action bean="provinceAction"            method="createTarget" />
		</transition>
		<transition on="selectTarget"  to="provinceBrowse.view">
			<action bean="provinceAction"            method="selectTarget" />
		</transition>
	</view-state>

	<!-- 
	 ! province  
	 ! BROWSE VIEW
	 !-->
	<view-state id="provinceBrowse.view" view="frame">
		<!-- 
		 ! before browse
		 -->
        <render-actions>
            <action bean="provinceAction" method="prepareTarget"/>
            <action bean="provinceAction" method="resolveAuthorization"/>
			<set attribute="sidenav"   value="'province/province_nav'"  scope="flash"/>
			<set attribute="sidebar"   value="'province/province_bar'"  scope="flash"/>
			<set attribute="template"  value="'province/province'"      scope="flash"/>
        </render-actions>
		<!-- 
		 ! local transitions
		 -->
		<transition on="editTarget"     to="provinceEdit.view"/>
		<!-- 
		 ! backward transitions
		 -->
		<transition on="toSelection"   to="provinceSelection.view"/>
	</view-state>
	
	<!-- 
	 ! province  
	 ! EDIT VIEW
	 !-->
	<view-state id="provinceEdit.view" view="frame">
		<!-- 
		 ! before browse
		 -->
        <render-actions>
            <action bean="provinceAction" method="editTarget"/>
			<set attribute="sidenav"   value="'province/edit_nav'"    scope="flash"/>
			<set attribute="sidebar"   value="'province/province_bar'"  scope="flash"/>
			<set attribute="template"  value="'province/province_form'"      scope="flash"/>
        </render-actions>
		<!-- 
		 ! local transitions
		 -->
		<transition on="storeTarget"   to="provinceBrowse.view">
			<action bean="provinceAction"            method="bindAndValidate" />
			<action bean="provinceAction"            method="storeTarget" />
		</transition>
	</view-state>
	
	<!--
	 ! End states 
	// -->

	<end-state id="toHome" />
	<end-state id="toParent" />
	<end-state id="returnTarget" >
		<output-mapper>
			<mapping source="flowScope.province" target="returnTarget"/>
		</output-mapper>
	</end-state>
	
	<!--
	 ! Globals 
	// -->

	<global-transitions>
		<transition on="toHome"   to="toHome"/>
		<transition on="toParent" to="toParent"/>
		<transition on="cancelForm"   to="provinceBrowse.view"/>
	</global-transitions>
	
</flow>
