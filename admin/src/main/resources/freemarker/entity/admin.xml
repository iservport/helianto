<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:ns0="http://www.w3.org/2001/XMLSchema-instance" ns0:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd" start-state="preProcess">

   <on-start>
      <set name="flowScope.assign" value="'entity/assign'"/>
      <set name="conversationScope.entityStyle" value="'white.css'"/>
   </on-start>

   <action-state id="preProcess">
      <evaluate expression="operatorFilterAction.applyFilter"/>
      <transition on="success" to="entitySelection.view"/>
   </action-state>

<!-- 001
	 ! entity 
	 ! SELECTION VIEW
	 !-->
   <view-state id="entitySelection.view" view="frame">
<!-- 
		 ! before selection
		 -->
      <on-render>
         <evaluate expression="entityFilterAction.applyFilter"/>
         <set name="flashScope.forward" value="'entity/selection_fwd'"/>
         <set name="flashScope.sidenav" value="'entity/selection_nav'"/>
         <set name="flashScope.sidebar" value="'entity/selection_filter'"/>
         <set name="flashScope.mainbar" value="'entity/mainbar'"/>
         <set name="flashScope.template" value="'entity/selection'"/>
         <set name="flashScope.info" value="'entity/info'"/>
      </on-render>
<!-- 
		 ! forward transitions
		 -->
      <transition on="toProvince" to="province.subflow"/>
      <transition on="toKeyType" to="keyType.subflow"/>
      <transition on="toService" to="service.subflow"/>
<!-- 
		 ! local transitions
		 -->
      <transition on="selectTarget" to="entityBrowse.view">
         <evaluate expression="entityFilterAction.selectTarget"/>
      </transition>
      <transition on="createTarget" to="entityEdit.view">
         <evaluate expression="entityAction.createTarget"/>
      </transition>
   </view-state>

<!-- 002
	 ! entity  
	 ! BROWSE VIEW
	 !-->
   <view-state id="entityBrowse.view" view="frame">
<!-- 
		 ! before browse
		 -->
      <on-render>
         <evaluate expression="entityAction.prepareTarget"/>
         <evaluate expression="entityAction.resolveAuthorization"/>
         <set name="flashScope.forward" value="'toSelection'"/>
         <set name="flashScope.sidenav" value="'entity/entity_nav'"/>
         <set name="flashScope.sidebar" value="'entity/entity_bar'"/>
         <set name="flashScope.mainnav" value="'main_nav'"/>
         <set name="flashScope.template" value="'entity/entity'"/>
      </on-render>
<!-- 
		 ! forward transitions
		 -->
      <transition on="toUser" to="user.subflow"/>
<!-- 
		 ! local transitions
		 -->
      <transition on="editTarget" to="entityEdit.view"/>
      <transition on="createUserGroup" to="userGroup.subflow">
         <evaluate expression="userGroupAction.createTarget"/>
      </transition>
      <transition on="selectUserGroup" to="userGroup.subflow">
         <evaluate expression="userGroupAction.selectTarget"/>
      </transition>
      <transition on="selectUser" to="userBrowse.view">
         <evaluate expression="userGroupAction.selectTarget"/>
      </transition>
<!-- 
		 ! backward transitions
		 -->
      <transition on="toSelection" to="entitySelection.view"/>
   </view-state>

<!-- 003
	 ! entity  
	 ! EDIT VIEW
	 !-->
   <view-state id="entityEdit.view" view="frame">
<!-- 
		 ! before browse
		 -->
      <on-render>
         <evaluate expression="entityAction.editTarget"/>
         <set name="flashScope.sidenav" value="'entity/edit_nav'"/>
         <set name="flashScope.sidebar" value="'entity/entity_bar'"/>
         <set name="flashScope.template" value="'entity/entity_form'"/>
      </on-render>
<!-- 
		 ! local transitions
		 -->
      <transition on="storeTarget" to="entityBrowse.view">
         <evaluate expression="entityAction.bindAndValidate"/>
         <evaluate expression="entityAction.storeTarget"/>
      </transition>
      <transition on="cancelForm" to="entityBrowse.view"/>
   </view-state>

<!-- 
	 ! province
	 ! SUBFLOW
	 !-->
   <subflow-state id="province.subflow" subflow="province">
      <input name="operator" value="flowScope.operator"/>
      <transition on="toParent" to="entitySelection.view"/>
   </subflow-state>

<!-- 
	 ! keyType
	 ! SUBFLOW
	 !-->
   <subflow-state id="keyType.subflow" subflow="keyType">
      <input name="operator" value="flowScope.operator"/>
      <transition on="toParent" to="entitySelection.view"/>
   </subflow-state>

<!-- 
	 ! service
	 ! SUBFLOW
	 !-->
   <subflow-state id="service.subflow" subflow="service">
      <input name="operator" value="flowScope.operator"/>
      <transition on="toParent" to="entitySelection.view"/>
   </subflow-state>

<!-- 
	 ! user
	 ! SUBFLOW
	 !-->
   <subflow-state id="user.subflow" subflow="user">
      <input name="operator" value="flowScope.operator"/>
      <input name="entity" value="flowScope.entity"/>
      <input name="userGroup" value="flowScope.userGroup"/>
      <input name="user" value="flowScope.user"/>
      <output name="entity" value="flowScope.entity"/>
      <transition on="toSelection" to="entityBrowse.view"/>
      <transition on="toHome" to="toHome"/>
   </subflow-state>

<!-- 
	 ! user
	 ! BROWSE VIEW
	 !-->
   <view-state id="userBrowse.view" view="frame">
<!-- 
		 ! before browse
		 -->
      <on-render>
         <evaluate expression="userGroupAction.prepareTarget"/>
         <evaluate expression="userGroupAction.resolveAuthorization"/>
         <set name="flashScope.forward" value="'toSelection'"/>
         <set name="flashScope.sidebar" value="'user/userGroup_bar'"/>
         <set name="flashScope.template" value="'user/userGroup'"/>
      </on-render>
<!-- 
		 ! local transitions
		 -->
      <transition on="editUserRole" to="userBrowse.view"/>
      <transition on="selectUser" to="userAssociation.subflow">
         <evaluate expression="userAssociationAction.selectTarget"/>
      </transition>
<!-- 
		 ! backward transitions
		 -->
      <transition on="toSelection" to="entityBrowse.view"/>
   </view-state>

<!-- 
	 ! userGroup
	 ! SUBFLOW
	 !-->
   <subflow-state id="userGroup.subflow" subflow="userGroup">
      <input name="operator" value="flowScope.operator"/>
      <input name="entity" value="flowScope.entity"/>
      <input name="userGroup" value="flowScope.userGroup"/>
      <output name="entity" value="flowScope.entity"/>
      <transition on="toSelection" to="entityBrowse.view"/>
      <transition on="toHome" to="toHome"/>
   </subflow-state>

<!--
	 ! End states 
	// -->
   <end-state id="toHome"/>

<!--
	 ! Globals 
	// -->
   <global-transitions>
      <transition on="toHome" to="toHome"/>
      <transition on="forbidden" to="toHome"/>
   </global-transitions>

</flow>
