<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:ns0="http://www.w3.org/2001/XMLSchema-instance" ns0:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd" start-state="preProcess">

   <input name="operator" value="flowScope.operator"/>

   <on-start>
      <set name="flowScope.assign" value="'keyType/assign'"/>
   </on-start>

   <action-state id="preProcess">
      <evaluate expression="keyTypeLoadAction.preProcess"/>
      <transition to="keyTypeSelection.view"/>
   </action-state>

	<!-- 
	 ! keyType 
	 ! SELECTION VIEW
	 !-->
   <view-state id="keyTypeSelection.view" view="/frame">
		<!-- 
		 ! before selection
		 -->
      <on-render>
         <evaluate expression="keyTypeLoadAction.load"/>
         <set name="flashScope.forward" value="'toSelection'"/>
         <set name="flashScope.sidenav" value="'keyType/selection_nav'"/>
         <set name="flashScope.sidebar" value="'keyType/selection_filter'"/>
         <set name="flashScope.template" value="'keyType/selection'"/>
      </on-render>
		<!-- 
		 ! local transitions
		 -->
      <transition on="selectTarget" to="keyTypeBrowse.view">
         <evaluate expression="keyTypeLoadAction.selectTarget"/>
      </transition>
      <transition on="createTarget" to="keyTypeEdit.view">
         <evaluate expression="keyTypeAction.createTarget"/>
      </transition>
      <transition on="toSelection" to="toParent"/>
   </view-state>

	<!-- 
	 ! keyType  
	 ! BROWSE VIEW
	 !-->
   <view-state id="keyTypeBrowse.view" view="/frame">
		<!-- 
		 ! before browse
		 -->
      <on-render>
         <evaluate expression="keyTypeAction.prepareTarget"/>
         <evaluate expression="keyTypeAction.resolveAuthorization"/>
         <set name="flashScope.forward" value="'toSelection'"/>
         <set name="flashScope.sidebar" value="'keyType/keyType_bar'"/>
         <set name="flashScope.mainnav" value="'main_nav'"/>
         <set name="flashScope.template" value="'keyType/keyType'"/>
      </on-render>
		<!-- 
		 ! local transitions
		 -->
      <transition on="editTarget" to="keyTypeEdit.view"/>
		<!-- 
		 ! backward transitions
		 -->
      <transition on="toSelection" to="keyTypeSelection.view"/>
   </view-state>

	<!-- 
	 ! keyType  
	 ! EDIT VIEW
	 !-->
   <view-state id="keyTypeEdit.view" view="/frame">
		<!-- 
		 ! before browse
		 -->
      <on-render>
         <evaluate expression="keyTypeAction.editTarget"/>
         <set name="flashScope.sidenav" value="'keyType/edit_nav'"/>
         <set name="flashScope.sidebar" value="'keyType/keyType_bar'"/>
         <set name="flashScope.template" value="'keyType/keyType_form'"/>
      </on-render>
		<!-- 
		 ! local transitions
		 -->
      <transition on="storeTarget" to="keyTypeBrowse.view">
         <evaluate expression="keyTypeAction.bindAndValidate"/>
         <evaluate expression="keyTypeAction.storeTarget"/>
      </transition>
      <transition on="cancelForm" to="keyTypeBrowse.view"/>
   </view-state>

	<!--
	 ! End states 
	// -->
   <end-state id="toHome"/>
   <end-state id="toParent"/>
   <end-state id="returnTarget">
      <output name="returnTarget" value="flowScope.keyType"/>
   </end-state>

</flow>
