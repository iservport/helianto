<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
              http://www.springframework.org/schema/webflow
              http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<input-mapper>
		<input-attribute name="operator"  scope="flow" required="true"/>
		<input-attribute name="entity"    scope="flow" required="true"/>
		<input-attribute name="userGroup" scope="flow" required="true"/>
		<input-attribute name="user"      scope="flow" required="true"/>
	</input-mapper>
	
	<start-actions>
		<set attribute="assign"    value="'user/assign'"      scope="flow"/>
	</start-actions>
	
	<start-state idref="isNew" />
	
	<decision-state id="isNew" >
		<if test="flowScope.user.userKeyEmpty" 
		    then="userEdit.view" 
		    else="userBrowse.view"/>
	</decision-state>
	
	<!-- 
	 ! user  
	 ! BROWSE VIEW
	 !-->
	<view-state id="userBrowse.view" view="frame">
		<!-- 
		 ! before browse
		 -->
        <render-actions>
            <action bean="userAction" method="prepareTarget"/>
            <action bean="userAction" method="resolveAuthorization"/>
			<set attribute="sidenav"    value="'user/user_nav'"  scope="flash"/>
			<set attribute="sidebar"    value="'user/user_bar'"  scope="flash"/>
			<set attribute="template"   value="'user/user'"      scope="flash"/>
        </render-actions>
		<!-- 
		 ! local transitions
		 -->
		<transition on="editTarget"       to="userEdit.view"/>
		<transition on="editIdentity"     to="identityEdit.view"/>
		<transition on="createUserRole"   to="userRoleEdit.view">
			<action bean="userRoleAction" method="createTarget"/>
		</transition>
		<transition on="editUserRole"     to="userRoleEdit.view">
			<action bean="userRoleAction" method="selectTarget"/>
		</transition>
		<!-- 
		 ! backward transitions
		 -->
		<transition on="toSelection"      to="entityBrowse.view"/>
	</view-state>
	
	<!-- 
	 ! user  
	 ! EDIT VIEW
	 !-->
	<view-state id="userEdit.view" view="frame">
		<!-- 
		 ! before browse
		 -->
        <render-actions>
            <action bean="userAction" method="editTarget"/>
			<set attribute="sidenav"   value="'user/edit_nav'"   scope="flash"/>
			<set attribute="sidebar"   value="'user/user_bar'"   scope="flash"/>
			<set attribute="template"  value="'user/user_form'"  scope="flash"/>
        </render-actions>
		<!-- 
		 ! local transitions
		 -->
		<transition on="storeTarget"   to="userBrowse.view">
			<action bean="userAction"            method="bind" />
			<action bean="userAction"            method="storeTarget" />
		</transition>
	</view-state>
	
	<!-- 
	 ! identity  
	 ! EDIT VIEW
	 !-->
	<view-state id="identityEdit.view" view="frame">
		<!-- 
		 ! before browse
		 -->
        <render-actions>
            <action bean="userAction" method="editTarget"/>
			<set attribute="sidenav"   value="'user/edit_nav'"      scope="flash"/>
			<set attribute="sidebar"   value="'user/identity_bar'"  scope="flash"/>
			<set attribute="template"  value="'user/identity_form'" scope="flash"/>
        </render-actions>
		<!-- 
		 ! local transitions
		 -->
		<transition on="storeTarget"   to="storeIdentity">
			<action bean="userAction"            method="bind" />
		</transition>
	</view-state>
	<action-state id="storeIdentity">
		<action bean="userAction"                method="storeTarget"/>
		<transition on="success" to="userBrowse.view"/>
		<transition on="error"   to="identityEdit.view"/>
	</action-state>
	
	<!-- 
	 ! userRole  
	 ! EDIT VIEW
	 !-->
	<view-state id="userRoleEdit.view" view="frame">
		<!-- 
		 ! before browse
		 -->
        <render-actions>
            <action bean="userRoleAction" method="editTarget"/>
			<set attribute="sidenav"   value="'user/edit_nav'"      scope="flash"/>
			<set attribute="sidebar"   value="'user/identity_bar'"  scope="flash"/>
			<set attribute="template"  value="'user/userRole_form'" scope="flash"/>
        </render-actions>
		<!-- 
		 ! local transitions
		 -->
		<transition on="storeTarget"   to="storeUserRole">
			<action bean="userRoleAction"            method="bind" />
		</transition>
	</view-state>
	<action-state id="storeUserRole">
		<action bean="userRoleAction"                method="storeTarget"/>
		<transition on="success" to="userBrowse.view"/>
		<transition on="error"   to="userRoleEdit.view"/>
	</action-state>
	
	<!--
	 ! End states 
	// -->

	<end-state id="backToHome" />
	<end-state id="backToParent" />
	<end-state id="returnTarget" >
		<output-mapper>
			<mapping source="flowScope.user" target="returnTarget"/>
		</output-mapper>
	</end-state>
	
	<!--
	 ! Globals 
	// -->

	<global-transitions>
		<transition on="backToHome"   to="backToHome"/>
		<transition on="backToParent" to="backToParent"/>
		<transition on="cancelForm"   to="userBrowse.view"/>
	</global-transitions>
	
</flow>
