<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        parent="_menu">
        
	<secured attributes="ROLE_USER" />
   
	<persistence-context />

	<input name="contactInfo"/>
	
	<on-start>
	    <set name="flowScope.basePath" value="'contactInfo/'"/>
	    <set name="flowScope.assign"   value="'assign'"/>
	</on-start>

	<view-state id="edit.view" view="/frame2" model="contactInfo">

		<on-render>
			<set name="viewScope.sidebar"  value="'contactInfo_bar'" />
			<set name="viewScope.template" value="'contactInfo_form'" />
		</on-render>

		<transition on="storeContactInfo" to="toCommit"/>
		
		<transition on="cancelForm" to="toReturn" bind="false"/>
		
	</view-state>

	<end-state id="toCommit" commit="true"/>

	<end-state id="toReturn" commit="true"/>


</flow>