<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
        
	<secured attributes="ROLE_USER_ALL" />
   
	<persistence-context />

	<input name="user"/>
	
	<on-start>
	    <set name="flowScope.basePath" value="'user/'"/>
	    <set name="flowScope.assign"   value="'assign'"/>
	</on-start>

	<view-state id="edit.view" view="/frame2" model="user">

		<on-render>
			<set name="viewScope.sidebar"  value="'user_bar'" />
			<set name="viewScope.template" value="'user_form'" />
		</on-render>

		<transition on="storeUser" to="toCommit">
			<evaluate expression="userAction.store(flowScope)" />
		</transition>
		
		<transition on="cancelForm" to="toReturn" bind="false"/>
		
	</view-state>

	<end-state id="toCommit" commit="true"/>

	<end-state id="toReturn" commit="true"/>


</flow>