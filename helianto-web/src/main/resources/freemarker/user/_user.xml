<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        parent="_menu">

	<secured attributes="ROLE_USER_ALL" />

	<persistence-context />

	<input name="userGroup" />
	<input name="userAssociation" />

	<on-start>
		<set name="flowScope.basePath" value="'user/'" />
		<set name="flowScope.assign"   value="'assign'" />
	    <set name="flowScope.parent"   value="userGroup"/>
	</on-start>

	<action-state id="createIfNeeded">
		<evaluate
			expression="userAssociationAction.create(flowScope, currentUser.principal)" />
		<transition on="edit" to="edit.view" />
		<transition to="prefilter" />
	</action-state>

	<end-state id="toHome" />
	<end-state id="toSelection" commit="true" />

</flow>