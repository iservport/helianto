<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        parent="_menu">

	<secured attributes="ROLE_ADMIN, ROLE_USER" />
	
	<persistence-context />

    <input name="filterOption" />
    
	<on-start>
		<set name="flowScope.basePath" value="'user/'" />
		<set name="flowScope.assign"   value="'assign'" />
		<evaluate expression="userModelBuilder.createFormModel(flowScope, currentUser.principal)" />
	</on-start>
	
	<action-state id="userParent.filter">
		<evaluate expression="userParentAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="userRole.filter" />
	</action-state>
	
	<action-state id="userRole.filter">
		<evaluate expression="userRoleAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="show.view" />
	</action-state>
	
	<view-state id="show.view" view="/frame2" model="userModel" >

		<on-render>
			<set name="viewScope.sidebar"  value="'user_bar'" />
			<set name="viewScope.siderel"  value="'user_rel'" />
			<set name="viewScope.template" value="'user'" />
		</on-render>

		<transition on="editUser"
		            to="user.subflow" />
		
		<transition on="selectUserGroupToAssociate"
		            to="createUserGroupAssociation" >
				<set name="flowScope.userGroup"  value="userModel.pages['userGroup'].item"/>
			</transition>
		
		<transition on="selectUserRole"
		            to="userRole.subflow" >
				<set name="flowScope.userRole"  value="userModel.pages['userRole'].item"/>
			</transition>
		
		<transition on="toSelection"        to="selection.view"/>
		
	</view-state>
	
	<action-state id="createUserGroupAssociation">
		<evaluate expression="userGroupAssociationAction.create(flowScope, currentUser.principal)" />
		<transition on="success"  to="userAssociation.subflow" />
	</action-state>
	
	<subflow-state id="userAssociation.subflow" subflow="_userAssociation">
		<input name="userAssociation" value="flowScope.userAssociation"/>
		<transition on="toCommit" to="userParent.filter" />
		<transition on="toReturn" to="show.view" />
	</subflow-state>
	
	<subflow-state id="user.subflow" subflow="_user">
		<input name="user" />
		<transition on="toCommit" to="service.filter" />
		<transition on="toReturn" to="show.view" />
	</subflow-state>

	<subflow-state id="userRole.subflow" subflow="_userRole">
		<input name="userGroup" value="flowScope.user"/>
		<input name="userRole"  value="flowScope.userRole"/>
		<output name="userRole" value="flowScope.userGroupRole"/>
		<transition on="toCommit" to="userParent.filter" />
		<transition on="toReturn" to="group.view" />
	</subflow-state>
	
	<end-state id="toCommit" commit="true" />

	<end-state id="toReturn" commit="true" >
		<output name="user" />
	</end-state>

</flow>