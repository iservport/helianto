<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        parent="_userRead">

	<secured attributes="ROLE_ADMIN, ROLE_USER" />
	
	<persistence-context />

    <input name="filterOption" />
    
	<action-state id="userGroup.filter">
		<evaluate expression="userGroupAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="filter" />
	</action-state>

	<action-state id="filter">
		<evaluate expression="userAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="selection.view" />
	</action-state>
	
	<view-state id="selection.view" view="/frame2"  model="userModel" >

		<on-render>
			<set name="viewScope.group" value="'group'" />
		</on-render>

		<transition on="createUserGroup"
		            to="userGroup.subflow" >
				<evaluate expression="userGroupAction.create(flowScope, currentUser.principal)" />
			</transition>
		
		<transition on="selectUserGroup"
		            to="filter" >
				<set name="flowScope.userGroup"  value="userModel.pages['userGroup'].item"/>
			</transition>
		
		<transition on="showUserGroup"
		            to="userGroupRead.subflow" />
		
		<transition on="selectUser" 
		            to="userRole.filter" >
				<set name="flowScope.user"  value="userModel.pages['user'].item"/>
			</transition>
		
		<transition on="returnUser" 
		            to="toReturn" >
				<set name="flowScope.user"  value="userModel.pages['user'].item"/>
			</transition>
		
		<transition on="createUser"
		            to="userAssociationCreation.subflow" />
		
		<transition on="toSelection"        to="toCommit"/>
		
	</view-state>
	
	<subflow-state id="userAssociationCreation.subflow" subflow="_userAssociationCreation">
		<input name="userGroup" />
		<output name="userAssociation" value="flowScope.userAssociation" />
		<transition on="toCommit" to="userAssociation.subflow" />
		<transition on="toReturn" to="selection.view" />
	</subflow-state>
	
	<subflow-state id="userGroup.subflow" subflow="_userGroup">
		<input name="userGroup" />
		<output name="userGroup" value="flowScope.userGroup" />
		<transition on="toCommit" to="userGroup.filter" />
		<transition on="toReturn" to="selection.view" />
	</subflow-state>

	<subflow-state id="userGroupRead.subflow" subflow="_userGroupRead">
		<input name="userGroup" />
		<transition on="toCommit" to="userGroup.filter" />
		<transition on="toReturn" to="selection.view" />
	</subflow-state>

	<end-state id="toCommit" commit="true" />

	<end-state id="toReturn" commit="true" >
		<output name="user" />
	</end-state>

</flow>