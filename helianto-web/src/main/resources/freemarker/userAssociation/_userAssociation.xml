<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        parent="_menu">

	<secured attributes="ROLE_ADMIN, ROLE_USER" />

	<persistence-context />

	<input name="userAssociation" />

	<on-start>
		<set name="flowScope.basePath" value="'userAssociation/'" />
		<set name="flowScope.assign"   value="'assign'" />
	</on-start>

	<view-state id="edit.view" view="/frame2" model="userAssociation">

		<on-render>
			<set name="viewScope.sidebar"  value="'userAssociation_bar'" />
			<set name="viewScope.template" value="'userAssociation_form'" />
		</on-render>

		<transition on="storeUserAssociation" to="toCommit">
			<evaluate expression="userAssociationAction.store(flowScope)" />
		</transition>
		
		<transition on="cancelForm" to="toReturn" bind="false"/>
		
	</view-state>
	
	<end-state id="toCommit" commit="true"/>
<!-- 	<end-state id="toCommit" commit="true">
		<on-entry>
			<evaluate expression="persistenceContext.flush()" />
		</on-entry>
	</end-state>
 -->
	<end-state id="toReturn" commit="true"/>


</flow>