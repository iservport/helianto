<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        parent="_menu">
        
	<secured attributes="ROLE_ADMIN, ROLE_USER" />

	<persistence-context />

    <input name="credential"/>

	<view-state id="edit.view" view="/frame2" model="credential">

		<on-render>
			<set name="viewScope.basePath" value="'credential/'" />
			<set name="viewScope.sidebar"  value="'credential_bar'" />
			<set name="viewScope.template" value="'credential_form'" />
		</on-render>

		<transition on="storeCredential" to="toCommit">
			<evaluate expression="credentialAction.store(flowScope)" />
		</transition>
		
		<transition on="cancelForm" to="toReturn" bind="false"/>
		
	</view-state>

	<end-state id="toCommit" commit="true" >
		<output name="credential" value="flowScope.credential"/>
	</end-state>

	<end-state id="toReturn" commit="true"/>

</flow>