<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        parent="_menu">
        
	<secured attributes="ROLE_ADMIN, ROLE_USER" />

	<persistence-context />

    <input name="identity"/>

	<view-state id="edit.view" view="/frame2" model="identity">

		<on-render>
			<set name="viewScope.basePath" value="'identity/'" />
			<set name="viewScope.assign"   value="'assign'" />
			<set name="viewScope.sidebar"  value="'identity_bar'" />
			<set name="viewScope.template" value="'identity_form'" />
		</on-render>

		<transition on="storeIdentity" to="toCommit">
			<evaluate expression="identityAction.store(flowScope)" />
		</transition>
		
		<transition on="cancelForm" to="toReturn" bind="false"/>
		
	</view-state>

	<end-state id="toCommit" commit="true" >
		<output name="identity" value="flowScope.identity"/>
	</end-state>

	<end-state id="toReturn" commit="true"/>

</flow>