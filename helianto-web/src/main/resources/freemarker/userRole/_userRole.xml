<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        parent="_menu">

	<secured attributes="ROLE_ADMIN, ROLE_USER" />

	<persistence-context />

	<input name="userRole" />
	<input name="userGroup" />

	<on-start>
		<set name="flowScope.basePath" value="'userRole/'" />
		<set name="flowScope.assign"   value="'assign'" />
	</on-start>

	<view-state id="edit.view" view="/frame2" model="userRole">

		<on-render>
			<set name="viewScope.sidebar"  value="'userRole_bar'" />
			<set name="viewScope.template" value="'userRole_form'" />
		</on-render>

		<transition on="storeUserRole" to="toCommit">
			<evaluate expression="userRoleAction.store(flowScope)" />
		</transition>
		
		<transition on="removeUserGroupRole" to="toReturn">
			<evaluate expression="userGroupRoleAction.remove(flowScope, requestParameters)" />
		</transition>
		
		<transition on="removeUserRole" to="toReturn">
			<evaluate expression="userRoleAction.remove(flowScope, requestParameters)" />
		</transition>
		
		<transition on="cancelForm" to="toReturn" bind="false"/>
		
	</view-state>

	<end-state id="toCommit" commit="true">
		<output name="userRole"  value="flowScope.userRole"/>
		<output name="userGroup" value="flowScope.userGroup"/>
	</end-state>

	<end-state id="toReturn" commit="true"/>

</flow>