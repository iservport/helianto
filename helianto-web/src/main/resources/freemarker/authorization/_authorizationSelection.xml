<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        parent="_menu">

	<secured attributes="ROLE_USER" />
	
	<persistence-context />
	
	<on-start>
		<set name="flowScope.basePath" value="'authorization/'" />
		<set name="flowScope.assign"   value="'assign'" />
		<set name="flowScope.identity" value="currentUser.principal.user.identity" />
		<evaluate expression="authorizationAction.createFormModel(flowScope, currentUser.principal)" />
	</on-start>

	<action-state id="personalAddress.filter">
		<evaluate expression="personalAddressAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="filter" />
	</action-state>
	
	<action-state id="filter">
		<evaluate expression="authorizationAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="selection.view" />
	</action-state>
	
	<view-state id="selection.view" view="/frame2"  model="authorizationModel" >

		<on-render>
			<set name="viewScope.group" value="'group'" />
			<set name="flowScope.identity" value="personalAddress.identity" />
		</on-render>

		<transition on="selectAuthorization" 
					to="filter" >
				<set name="flowScope.authorization"  value="authorizationModel.pages['authorization'].item"/>
			</transition>
		
		<transition on="createAuthorization" 
					to="entity.subflow" >
				<evaluate expression="entityAction.create(flowScope, currentUser.principal)" />
			</transition>
		
		<transition on="addPhone" 
					to="selection.view" >
			</transition>
		
		<transition on="removePhone" 
					to="identityPhone.subflow" >
				<evaluate expression="identityPhoneAction.create(flowScope, currentUser.principal)" />
			</transition>
		
		<transition on="authorize" 
		            to="personalAddress.filter" >
			<evaluate expression="authorizationAction.authorize(flowScope.authorization)" />
		</transition>
		
	</view-state>

	<subflow-state id="user.subflow" subflow="_user">
		<input name="user" />
		<transition on="toCommit" to="filter" />
		<transition on="toReturn" to="filter" />
	</subflow-state>
	
	<subflow-state id="entity.subflow" subflow="_entity">
		<input name="entity" />
		<transition on="toCommit" to="filter" />
		<transition on="toReturn" to="selection.view" />
	</subflow-state>
	
	<subflow-state id="identityPhone.subflow" subflow="_phone">
		<input name="phone" value="flowScope.identityPhone"/>
		<transition on="toCommit" to="filter" >
			<evaluate expression="identityPhoneAction.store(flowScope)" />
		</transition>
		<transition on="toReturn" to="selection.view" />
	</subflow-state>
	
	
	
</flow>