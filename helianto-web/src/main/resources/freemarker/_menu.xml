<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        abstract="true">

	<secured attributes="ROLE_USER_ALL, ROLE_ADMIN_MANAGER" />

	<view-state id="selection.view" view="/frame2"  >

		<on-render>
			<set name="viewScope.template" value="'selection'" />
			<set name="viewScope.sidebar"  value="'filter'" />
		</on-render>

		<transition on="applyFilter"       to="filter" />
		
		<!-- "toAdmin" -->
		<transition on="toAdmin"           to="toAdmin" />
		<transition on="toUsers"           to="toUsers" />
		
		<transition on="logout"            to="logout" />
		
	</view-state>
	
	<view-state id="show.view"      view="/frame2"  >

		<!-- "toAdmin" -->
		<transition on="toAdmin"           to="toAdmin" />
		<transition on="toUsers"           to="toUsers" />
		
		<transition on="logout"            to="logout" />
		
	</view-state>
	
	<end-state id="toAdmin"           view="redirect:_authorizationSelection" />

	<end-state id="toUsers"           view="redirect:_userSelection" />

	<end-state id="logout"            view="redirect:j_spring_security_logout" />
</flow>