<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<secured attributes="ROLE_USER_ALL" />

	<persistence-context />

	<input name="userGroup" />
	<input name="userAssociation" />

	<on-start>
		<set name="flowScope.basePath" value="'user/'" />
		<set name="flowScope.assign"   value="'assign'" />
	    <set name="flowScope.parent"   value="userGroup"/>
	</on-start>

	<action-state id="createIfNeeded">
		<evaluate
			expression="userGroupAssociationAction.create(flowScope, currentUser.principal)" />
		<transition on="edit" to="edit.view" />
		<transition to="prefilter" />
	</action-state>

	<action-state id="prefilter">
		<set name="flowScope.child" value="userAssociation.child" />
		<transition on="success" to="filter" />
	</action-state>

	<action-state id="filter">
		<evaluate
			expression="userAssociationAction.filter(flowScope, currentUser.principal)" />
		<transition on="success" to="show.view" />
	</action-state>

	<view-state id="show.view" view="/frame2" model="userAssociationFilter" >

		<on-render>
			<set name="viewScope.user"     value="userAssociation.child" />
			<set name="viewScope.sidebar"  value="'user2_bar'" />
			<set name="viewScope.template" value="'user2'" />
		</on-render>

		<transition on="editUserAssociation"   to="edit.view" />
		<transition on="selectUserAssociation" to="userAssociation.subflow" />
		<transition on="createUserGroupAssociation" to="userAssociation.subflow" />
		<transition on="createUserAssociation"      to="userAssociation.subflow" />

		<transition on="toSelection" to="toSelection" />
		<transition on="toHome"      to="toHome" />
		
	</view-state>

	<subflow-state id="userGroupAssociation.subflow" subflow="_userGroupAssociation">
		<input name="userAssociation" value="userAssociationFilter.item"/>
		<input name="userGroup"       value="userAssociationFilter.item"/>
		<transition on="toSelection" to="filter" />
	</subflow-state>

	<subflow-state id="userAssociation.subflow" subflow="_userAssociation">
		<input name="userAssociation" value="userAssociationFilter.item"/>
		<input name="userGroup"       value="userAssociationFilter.item"/>
		<transition on="toSelection" to="filter" />
	</subflow-state>

	<view-state id="edit.view" view="/frame2" model="userAssociation" >
	
		<on-render>
			<set name="viewScope.sidebar"  value="'user2_bar'" />
			<set name="viewScope.template" value="'user2_form'" />
		</on-render>

		<transition on="storeUserAssociation" to="show.view">
			<evaluate expression="userAssociationAction.store(flowScope)" />
		</transition>
		<transition on="cancelForm" to="show.view"  bind="false"/>
		
	</view-state>

	<end-state id="toHome" />
	<end-state id="toSelection" commit="true" />

</flow>